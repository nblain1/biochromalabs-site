---
import '../styles/global.css';
import 'remixicon/fonts/remixicon.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { siteData, socialLinks } from '../data/siteData';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string | URL;
}

const { 
  title = siteData.name, 
  description = siteData.description,
  image = '/images/logo.png', // Fallback image for social sharing
} = Astro.props;

// Dynamically resolve the canonical URL to prevent duplicate content issues
const canonicalURL = Astro.props.canonicalURL || new URL(Astro.url.pathname, Astro.site || 'https://biochromalabs.com');

// JSON-LD Schema for Google's Knowledge Graph (Local Business & Laboratory context)
const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": siteData.name,
  "image": new URL(image, canonicalURL).toString(),
  "@id": canonicalURL.toString(),
  "url": canonicalURL.toString(),
  "telephone": siteData.phone,
  "email": siteData.email,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Dallas",
    "addressRegion": "TX",
    "addressCountry": "US"
  },
  "description": siteData.description,
  "sameAs": socialLinks.map((social) => siteData.social[social.name as keyof typeof siteData.social]).filter(Boolean)
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, canonicalURL)} />
    
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, canonicalURL)} />
    
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@600;700;800&display=swap" 
      rel="stylesheet"
    />
  </head>
  <body class="bg-slate-950 text-white antialiased">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>