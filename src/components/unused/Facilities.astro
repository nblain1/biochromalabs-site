---
import { facilities } from '../data/siteData';
import { Image } from 'astro:assets';
---

<section id="facilities" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Laboratory Capabilities</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Purpose-built spaces that support consistent, documented testing.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {facilities.map((facility) => (
        <div class="bg-slate-800 rounded-xl overflow-hidden border border-slate-700 hover:border-[#4db848] transition-all transform hover:scale-105">
          <div class="aspect-video overflow-hidden">
            <Image
              src={facility.image}
              alt={facility.title}
              width={800}
              height={600}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold text-white mb-3">{facility.title}</h3>
            <p class="text-gray-400 leading-relaxed">{facility.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
