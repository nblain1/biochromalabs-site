---
import { statistics } from '../data/siteData';
---

<section class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Laboratory Snapshot</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Operational focus areas that support consistent results.
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
      {statistics.map((stat) => (
        <div class="text-center">
          <div class="w-16 h-16 bg-[#4db848]/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <i class={`${stat.icon} text-3xl text-[#4db848]`}></i>
          </div>
          <div class="text-3xl font-bold text-white mb-2">{stat.number}</div>
          <div class="text-gray-400 text-sm">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
