<form class="card-surface space-y-5">
  <div class="grid gap-4 sm:grid-cols-2">
    <div>
      <label for="name" class="text-sm font-semibold text-slate-200">
        Full name
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="mt-2 w-full rounded-xl border border-white/10 bg-slate-900/70 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none"
        placeholder="Jordan Lee"
      />
    </div>

    <div>
      <label for="company" class="text-sm font-semibold text-slate-200">
        Company
      </label>
      <input
        type="text"
        id="company"
        name="company"
        class="mt-2 w-full rounded-xl border border-white/10 bg-slate-900/70 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none"
        placeholder="Company name"
      />
    </div>
  </div>

  <div class="grid gap-4 sm:grid-cols-2">
    <div>
      <label for="email" class="text-sm font-semibold text-slate-200">
        Email address
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="mt-2 w-full rounded-xl border border-white/10 bg-slate-900/70 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none"
        placeholder="jordan@company.com"
      />
    </div>

    <div>
      <label for="phone" class="text-sm font-semibold text-slate-200">
        Phone number
      </label>
      <input
        type="tel"
        id="phone"
        name="phone"
        class="mt-2 w-full rounded-xl border border-white/10 bg-slate-900/70 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none"
        placeholder="+1 (555) 214-9010"
      />
    </div>
  </div>

  <div>
    <label for="inquiry" class="text-sm font-semibold text-slate-200">
      Engagement type
    </label>
    <select
      id="inquiry"
      name="inquiry"
      required
      class="mt-2 w-full rounded-xl border border-white/10 bg-slate-900/70 px-4 py-3 text-sm text-white focus:border-emerald-400 focus:outline-none"
    >
      <option value="" disabled selected>Select a focus area</option>
      <option value="chemistry">Analytical chemistry</option>
      <option value="microbiology">Microbiology</option>
      <option value="stability">Stability program</option>
      <option value="method-development">Method development</option>
      <option value="other">Other / partnership</option>
    </select>
  </div>

  <div>
    <label for="message" class="text-sm font-semibold text-slate-200">
      Project details
    </label>
    <textarea
      id="message"
      name="message"
      rows="5"
      required
      class="mt-2 w-full rounded-xl border border-white/10 bg-slate-900/70 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none"
      placeholder="Share sample type, testing needs, and target timelines."
    ></textarea>
  </div>

  <button type="submit" class="btn-primary w-full justify-center">
    Submit intake request
    <i class="ri-send-plane-line"></i>
  </button>
  <p class="text-xs text-slate-400">
    We respond within two business days with a scoped plan, timeline, and next steps.
  </p>
</form>
