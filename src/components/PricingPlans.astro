---
import { pricingPlans } from '../data/siteData';
---

<section id="pricing" class="py-20 bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Engagement Options</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Flexible engagement models for project-based or ongoing testing needs.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {pricingPlans.map((plan) => (
        <div class={`bg-slate-900 p-8 rounded-xl border transition-all transform hover:scale-105 ${plan.popular ? 'border-orange-500 shadow-xl' : 'border-slate-700 hover:border-orange-500'}`}>
          {plan.popular && (
            <span class="bg-orange-500 text-white text-sm px-4 py-1 rounded-full font-semibold">Most Requested</span>
          )}
          <h3 class="text-2xl font-bold text-white mt-4 mb-2">{plan.name}</h3>
          <div class="flex items-baseline mb-6">
            <span class="text-4xl font-bold text-white">{plan.price}</span>
            {plan.period && <span class="text-gray-400 ml-2">{plan.period}</span>}
          </div>
          <ul class="space-y-3 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <i class="ri-checkbox-circle-fill text-orange-500 text-lg mt-0.5"></i>
                <span class="text-gray-300">{feature}</span>
              </li>
            ))}
          </ul>
          <a
            href="/contact"
            class={`w-full text-center block py-3 rounded-lg font-semibold transition-all ${plan.popular ? 'bg-orange-500 text-white hover:bg-orange-600' : 'bg-slate-800 text-white hover:bg-slate-700'}`}
          >
            Request a Quote
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
