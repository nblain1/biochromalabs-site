---
interface Props {
  title: string;
  description: string;
  primaryLabel: string;
  primaryHref: string;
  secondaryLabel?: string;
  secondaryHref?: string;
}

const { title, description, primaryLabel, primaryHref, secondaryLabel, secondaryHref } = Astro.props;
---

<section class="rounded-3xl border border-emerald-500/20 bg-gradient-to-br from-emerald-500/10 via-slate-900 to-slate-900 p-8 sm:p-12">
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8">
    <div>
      <h2 class="text-3xl sm:text-4xl font-semibold text-white">{title}</h2>
      <p class="text-base text-slate-300 mt-3 max-w-2xl">{description}</p>
    </div>
    <div class="flex flex-col sm:flex-row gap-3">
      <a class="btn-primary" href={primaryHref}>{primaryLabel}</a>
      {secondaryLabel && secondaryHref && (
        <a class="btn-secondary" href={secondaryHref}>{secondaryLabel}</a>
      )}
    </div>
  </div>
</section>
