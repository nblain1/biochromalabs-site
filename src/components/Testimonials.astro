---
import { testimonials } from '../data/siteData';
---

<section class="py-20 bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Client Feedback</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Trusted by teams who need consistent, documented results.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-slate-900 p-8 rounded-xl border border-slate-700 hover:border-orange-500 transition-all transform hover:scale-105">
          <div class="flex mb-4">
            {[...Array(testimonial.rating)].map((_, index) => (
              <i class="ri-star-fill text-orange-500 text-xl"></i>
            ))}
          </div>
          <p class="text-gray-300 leading-relaxed mb-6">"{testimonial.content}"</p>
          <div class="border-t border-slate-700 pt-4">
            <h4 class="text-white font-semibold">{testimonial.name}</h4>
            <p class="text-gray-400 text-sm">{testimonial.role}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
