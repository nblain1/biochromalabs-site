---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  align?: "left" | "center";
}

const { eyebrow, title, description, align = "left" } = Astro.props;
const alignment = align === "center" ? "items-center text-center" : "items-start text-left";
---

<div class={`flex flex-col gap-3 ${alignment}`}>
  {eyebrow && (
    <span class="text-xs uppercase tracking-[0.3em] text-emerald-300 font-semibold">
      {eyebrow}
    </span>
  )}
  <h2 class="text-3xl sm:text-4xl font-semibold text-white leading-tight">
    {title}
  </h2>
  {description && <p class="text-base sm:text-lg text-slate-300 max-w-3xl">{description}</p>}
</div>
