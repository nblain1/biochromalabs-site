---
interface Props {
  items: { question: string; answer: string }[];
}

const { items } = Astro.props;
---

<div class="grid gap-4">
  {items.map((item) => (
    <details class="group rounded-2xl border border-white/10 bg-slate-900/60 p-5">
      <summary class="flex cursor-pointer list-none items-center justify-between gap-4 text-base font-semibold text-white">
        {item.question}
        <span class="text-emerald-300 transition-transform duration-200 group-open:rotate-45">+</span>
      </summary>
      <p class="mt-3 text-sm text-slate-300">{item.answer}</p>
    </details>
  ))}
</div>
