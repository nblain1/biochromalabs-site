---
import { faqs } from '../data/siteData';
---

<section class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">FAQs</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Answers to common questions about our analytical services.
      </p>
    </div>

    <div class="max-w-4xl mx-auto space-y-6">
      {faqs.map((faq) => (
        <div class="bg-slate-800 rounded-xl border border-slate-700 p-6 hover:border-orange-500 transition-all">
          <h3 class="text-xl font-bold text-white mb-3">{faq.question}</h3>
          <p class="text-gray-400 leading-relaxed">{faq.answer}</p>
        </div>
      ))}
    </div>
  </div>
</section>
