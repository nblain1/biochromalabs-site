---
import { services } from '../data/siteData';
---

<section id="services" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Services</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Focused analytical capabilities for regulated products and R&amp;D teams.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-slate-800 p-8 rounded-xl border border-slate-700 hover:border-orange-500 transition-all transform hover:scale-105">
          <h3 class="text-2xl font-bold text-white mb-4">{service.name}</h3>
          <p class="text-gray-400 mb-6 leading-relaxed">{service.description}</p>
          <div class="flex items-center justify-between">
            <div class="flex items-center text-gray-500 gap-2">
              <i class="ri-file-check-line text-orange-500"></i>
              <span>Scope-defined</span>
            </div>
            <a
              href="/contact"
              class="text-orange-500 hover:text-orange-400 font-semibold flex items-center gap-2"
            >
              Request details
              <i class="ri-arrow-right-line"></i>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
