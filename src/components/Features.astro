---
import { features } from '../data/siteData';
---

<section id="credibility" class="py-20 bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Quality-focused, client-ready</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Credibility built on documented methods, experienced analysts, and clear reporting.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="bg-slate-900 p-8 rounded-xl border border-slate-700 hover:border-[#4db848] transition-all transform hover:scale-105">
          <div class="w-16 h-16 bg-[#4db848]/10 rounded-lg flex items-center justify-center mb-6">
            <i class={`${feature.icon} text-4xl text-[#4db848]`}></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">{feature.title}</h3>
          <p class="text-gray-400 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
