---
import { successStories } from '../data/siteData';
import { Image } from 'astro:assets';
---

<section class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Case Studies</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Examples of how teams use BioChroma for dependable analytical support.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {successStories.map((story) => (
        <div class="bg-slate-800 rounded-xl overflow-hidden border border-slate-700 hover:border-orange-500 transition-all transform hover:scale-105">
          <div class="relative">
            <div class="grid grid-cols-2 gap-0">
              <div class="aspect-square">
                <Image
                  src={story.beforeImage}
                  alt={story.name}
                  width={400}
                  height={400}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="aspect-square">
                <Image
                  src={story.afterImage}
                  alt={story.result}
                  width={400}
                  height={400}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent"></div>
          </div>
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold text-white mb-1">{story.name}</h3>
                <p class="text-orange-500 text-sm font-semibold">{story.age}</p>
              </div>
              <div class="text-right">
                <div class="text-white font-bold">{story.result}</div>
                <div class="text-gray-400 text-sm">{story.duration}</div>
              </div>
            </div>
            <p class="text-gray-300 leading-relaxed">{story.story}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
