---
interface Props {
  number: string;
  label: string;
  note?: string;
}

const { number, label, note } = Astro.props;
---

<div class="card-surface surface-glow p-5">
  <p class="text-3xl font-semibold text-white">{number}</p>
  <p class="text-sm font-medium text-slate-200 mt-2">{label}</p>
  {note && <p class="text-xs text-slate-400 mt-1">{note}</p>}
</div>
