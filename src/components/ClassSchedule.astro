---
import { classSchedule } from '../data/siteData';
---

<section class="py-20 bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Workflow Overview</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        A typical flow from intake to reporting.
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="bg-slate-900 rounded-2xl border border-slate-700 overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-0">
          <div class="bg-orange-500 p-6 text-center">
            <h3 class="text-2xl font-bold text-white">Stage</h3>
          </div>
          <div class="bg-orange-500 p-6 text-center">
            <h3 class="text-2xl font-bold text-white">Activity</h3>
          </div>
          <div class="bg-orange-500 p-6 text-center">
            <h3 class="text-2xl font-bold text-white">Owner</h3>
          </div>
        </div>

        <div class="divide-y divide-slate-700">
          {classSchedule.map((item, index) => (
            <div class={`grid grid-cols-1 md:grid-cols-3 gap-0 ${index % 2 === 0 ? 'bg-slate-800' : 'bg-slate-900'}`}>
              <div class="p-6 text-center">
                <span class="text-orange-500 font-bold text-lg">{item.time}</span>
              </div>
              <div class="p-6 text-center">
                <span class="text-white font-semibold text-lg">{item.class}</span>
              </div>
              <div class="p-6 text-center">
                <span class="text-gray-300 text-lg">{item.trainer}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
