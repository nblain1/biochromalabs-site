---
interface Props {
  index: number;
  title: string;
  description: string;
}

const { index, title, description } = Astro.props;
---

<div class="process-step motion-fade-up">
  <span class="process-node">{index}</span>
  <div class="process-body">
    <h3 class="text-lg font-semibold text-white">{title}</h3>
    <p class="text-sm text-slate-300">{description}</p>
  </div>
</div>
