---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { siteData, teamMembers, history } from '../data/siteData';
---

<Layout
  title={`About Us - ${siteData.name}`}
  description="Meet the scientific leadership and learn about the history of BioChroma Analytical Labs LLC."
>
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span style="color: var(--teal); opacity: 0.8;">About</span>
      </nav>

      <div class="section-heading" style="text-align: left; margin-bottom: 3rem;">
        <p class="hero-eyebrow">Our Mission & Facility</p>
        <h1>Scientific leadership that supports every engagement.</h1>
        <p class="hero-lead" style="margin-top: 1rem; max-width: 800px;">
          Based in the DFW metroplex, BioChroma Analytical Labs was built to fill technical gaps in new product development. We combine rigorous process discipline with experienced analysts to keep data quality high and timelines clear.
        </p>
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Leadership</p>
        <h2>Meet the experts responsible for method execution and QA review.</h2>
      </div>

      <div class="team-grid">
        {teamMembers.map((member) => (
          <article class="team-card">
            <div class="team-header">
              <img
                src={member.image}
                alt={`${member.name} - ${member.role}`}
                class="team-avatar"
                loading="lazy"
              />
              <div class="team-titles">
                <h3>{member.name}</h3>
                <p class="team-role">{member.role}</p>
                <p class="team-spec">{member.specialization}</p>
              </div>
            </div>
            <p class="team-bio">{member.bio}</p>
            <div class="cert-pills">
              {member.certifications.map((cert) => (
                <span class="cert-pill">{cert}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section chapter-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Timeline</p>
        <h2>A laboratory built for long-term partnerships.</h2>
      </div>

      <div class="history-grid">
        {history.map((milestone) => (
          <div class="history-card">
            <p class="history-year">{milestone.year}</p>
            <h3 class="history-title">{milestone.title}</h3>
            <p class="history-desc">{milestone.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <CTA
        title="Want to align on quality expectations?"
        description="We can provide quality agreements, documentation packages, and audit-ready reports built for your regulatory pathway."
        primaryLabel="Talk to our team"
        primaryHref="/contact"
        secondaryLabel="Review capabilities"
        secondaryHref="/capabilities"
      />
    </div>
  </section>
</Layout>

<style>
  /* Breadcrumb Styling */
  .breadcrumb {
    font-size: 0.875rem;
    margin-bottom: 2rem;
    display: flex;
    gap: 0.5rem;
  }
  
  .breadcrumb a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .breadcrumb a:hover {
    color: #00e6a8;
  }

  /* Team Grid */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .team-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .team-header {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .team-avatar {
    width: 80px;
    height: 80px;
    border-radius: 16px;
    object-fit: cover;
    border: 2px solid rgba(0, 230, 168, 0.2);
  }

  .team-titles h3 {
    font-size: 1.25rem;
    color: #fff;
    margin-bottom: 0.25rem;
  }

  .team-role {
    color: #00e6a8;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .team-spec {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.75rem;
  }

  .team-bio {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .cert-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto; /* Pushes pills to the bottom of the card */
  }

  .cert-pill {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
  }

  /* History Grid */
  .history-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .history-card {
    background: rgba(255, 255, 255, 0.02);
    border-top: 3px solid #00e6a8;
    padding: 2rem;
    border-radius: 0 0 12px 12px;
  }

  .history-year {
    color: #00e6a8;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .history-title {
    font-size: 1.25rem;
    color: #fff;
    margin-bottom: 0.75rem;
  }

  .history-desc {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    font-size: 0.95rem;
  }
</style>