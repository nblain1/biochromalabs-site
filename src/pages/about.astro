---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { siteData, teamMembers, history } from '../data/siteData';
---

<Layout
  title={`About Our Team - ${siteData.name}`}
  description="Meet the scientific leadership and learn about the history of BioChroma Analytical Labs."
>
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span style="color: var(--teal); opacity: 0.8;">About</span>
      </nav>

      <div class="section-heading" style="text-align: left; margin-bottom: 3rem;">
        <p class="hero-eyebrow">The BioChroma Mission</p>
        <h1 style="max-width: 850px;">Scientific leadership that supports every engagement.</h1>
        <p class="hero-lead" style="margin-top: 1.5rem; max-width: 800px;">
          Based in the DFW metroplex, BioChroma Analytical Labs was established to bridge technical gaps in regulated product development. We combine rigorous process discipline with experienced analysts to keep data quality high and timelines clear.
        </p>
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Leadership</p>
        <h2>Technical experts responsible for method execution and QA review.</h2>
      </div>

      <div class="team-grid">
        {teamMembers.map((member) => (
          <article class="team-card">
            <div class="team-header">
              <img
                src={member.image}
                alt={`${member.name} - ${member.role}`}
                class="team-avatar"
                loading="lazy"
              />
              <div class="team-titles">
                <h3>{member.name}</h3>
                <p class="team-role">{member.role}</p>
                <p class="team-spec">{member.specialization}</p>
              </div>
            </div>
            <p class="team-bio">{member.bio}</p>
            <div class="cert-pills">
              {member.certifications.map((cert) => (
                <span class="cert-pill">{cert}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section chapter-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Laboratory Timeline</p>
        <h2>A facility built for long-term partnerships.</h2>
      </div>

      <div class="history-grid">
        {history.map((milestone) => (
          <div class="history-card">
            <p class="history-year">{milestone.year}</p>
            <h3 class="history-title">{milestone.title}</h3>
            <p class="history-desc">{milestone.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <CTA
        title="Want to align on quality expectations?"
        description="We can provide quality agreements, documentation packages, and audit-ready reports built for your regulatory pathway."
        primaryLabel="Talk to our team"
        primaryHref="/contact"
        secondaryLabel="Review capabilities"
        secondaryHref="/capabilities"
      />
    </div>
  </section>
</Layout>

<style>
  .breadcrumb { font-size: 0.875rem; margin-bottom: 2rem; display: flex; gap: 0.5rem; }
  .breadcrumb a { color: rgba(255, 255, 255, 0.6); text-decoration: none; transition: 0.2s ease; }
  .breadcrumb a:hover { color: var(--teal); }

  /* Team Grid Alignment */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .team-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    transition: transform 0.2s ease;
  }
  .team-card:hover { transform: translateY(-4px); border-color: rgba(0, 230, 168, 0.2); }

  .team-header { display: flex; align-items: center; gap: 1.25rem; }
  .team-avatar {
    width: 80px; height: 80px;
    border-radius: 12px;
    object-fit: cover;
    border: 2px solid rgba(0, 230, 168, 0.2);
  }

  .team-titles h3 { font-size: 1.25rem; color: #fff; margin-bottom: 0.25rem; }
  .team-role { color: var(--teal); font-size: 0.875rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; }
  .team-spec { color: rgba(255, 255, 255, 0.4); font-size: 0.8rem; }

  .team-bio { color: rgba(255, 255, 255, 0.7); line-height: 1.6; font-size: 0.95rem; }

  .cert-pills { display: flex; flex-wrap: wrap; gap: 0.5rem; margin-top: auto; }
  .cert-pill {
    background: rgba(0, 230, 168, 0.05);
    border: 1px solid rgba(0, 230, 168, 0.1);
    color: var(--teal);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
  }

  /* History Grid */
  .history-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .history-card {
    background: rgba(255, 255, 255, 0.02);
    border-top: 3px solid var(--teal);
    padding: 2rem;
    border-radius: 0 0 12px 12px;
  }

  .history-year { color: var(--teal); font-size: 0.875rem; font-weight: 800; letter-spacing: 0.1em; margin-bottom: 0.5rem; }
  .history-title { font-size: 1.15rem; color: #fff; margin-bottom: 0.75rem; }
  .history-desc { color: rgba(255, 255, 255, 0.6); line-height: 1.6; font-size: 0.9rem; }
</style>