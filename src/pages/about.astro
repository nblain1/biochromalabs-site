---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { siteData, history } from '../data/siteData';

const founders = [
  {
    name: "Benny McKee",
    role: "President & Cofounder",
    image: "/images/benny-placeholder.jpg",
    expertise: "General & Operations Management, Regulatory Compliance, GMP/ISO 17025 Auditing, Microbiology Applications.",
    education: "BS Biology – Dallas Baptist University; Specialized training in HACCP, Low Acid Foods, and Microbiological Shelf Life.",
    bio: "With over 20 years of executive service experience, Benny formerly served as Chief Scientific Officer at Coats Aloe International and spent nearly two decades helping scale Analytical Food Laboratories by over 10% through technical infrastructure and sales leadership."
  },
  {
    name: "Dr. Cheri Turman",
    role: "Vice President & Cofounder",
    image: "/images/cheri-placeholder.jpg",
    expertise: "Analytical Method Development, Process Engineering, Toxicology, and Quality/Regulatory Affairs.",
    education: "PhD Biomedical Sciences – UT Health Science Center/MD Anderson; MS/BS Chemistry – Stephen F. Austin State University.",
    bio: "A published researcher and former VP of Quality for Coats Aloe International, Dr. Turman currently serves as VP of Scientific Affairs for Provitas. She has held multiple adjunct professorships and is a recognized member of ACS, AOAC, IFT, and the Society of Cosmetic Chemists."
  }
];

const departmentLeads = [
  {
    id: 'chem-lead',
    dept: 'Chemistry',
    focus: 'Organic, Inorganic, & Wet Chemistry',
    responsibilities: [
      'Instrumentation: Oversight of HPLC, GCMS, LCMS, and Ion Chromatography workflows.',
      'Organic: Targeted analysis of vitamins, actives, and degradation products.',
      'Inorganic/Wet: Heavy metals, minerals, titration, and compositional profiling (Protein/Nitrogen).'
    ]
  },
  {
    id: 'micro-lead',
    dept: 'Microbiology',
    focus: 'Safety & Efficacy',
    responsibilities: [
      'Pathogen Screening: Oversight of USP <61>/<62> and BAM protocols.',
      'Challenge Studies: Lead scientist for Bacterial Challenge and AET/Preservative efficacy studies.',
      'Environment: Governance of water suitability and facility environmental monitoring.'
    ]
  },
  {
    id: 'stability-lead',
    dept: 'Stability',
    focus: 'Shelf Life & Stress',
    responsibilities: [
      'ICH Compliance: Management of real-time and accelerated aging protocols.',
      'Chamber Control: Oversight of 24/7 environmental monitoring and alert systems.',
      'Data Modelling: Statistical shelf-life projection and Arrhenius equation modeling.'
    ]
  },
  {
    id: 'quality-lead',
    dept: 'Quality Control',
    focus: 'Compliance & Integrity',
    responsibilities: [
      'Data Integrity: Independent review of 100% of analytical raw data and final reports.',
      'QMS Oversight: Maintenance of ISO 17025 alignment and version-controlled SOP systems.',
      'Audit Coordination: Lead point of contact for client and regulatory facility inspections.'
    ]
  }
];
---

<Layout
  title={`About Our Leadership - ${siteData.name}`}
  description="Meet the founders and scientific leads of BioChroma Analytical Labs."
>
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span style="color: var(--teal); opacity: 0.8;">About</span>
      </nav>

      <div class="section-heading" style="text-align: left; margin-bottom: 3rem;">
        <p class="hero-eyebrow">The BioChroma Mission</p>
        <h1 style="max-width: 850px;">Scientific leadership that supports every engagement.</h1>
        <p class="hero-lead" style="margin-top: 1.5rem; max-width: 800px;">
          BioChroma was established to bridge technical gaps in regulated product development. We combine rigorous process discipline with experienced analysts to keep data quality high and timelines clear.
        </p>
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Executive Leadership</p>
        <h2>The scientists and entrepreneurs behind the lab.</h2>
      </div>

      <div class="founder-stack">
        {founders.map((founder) => (
          <article class="founder-card">
            <div class="founder-header">
              <div class="founder-img-frame">
                <img src={founder.image} alt={founder.name} class="founder-avatar" />
              </div>
              <div class="founder-info">
                <p class="founder-role">{founder.role}</p>
                <h3>{founder.name}</h3>
                <ul class="founder-vitals">
                  <li><strong>Expertise:</strong> {founder.expertise}</li>
                  <li><strong>Education:</strong> {founder.education}</li>
                </ul>
              </div>
            </div>
            <div class="founder-bio">
              <p>{founder.bio}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section chapter-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Operational Leadership</p>
        <h2>Department Leads & Scientific Oversight</h2>
      </div>

      <div class="dept-lead-grid">
        {departmentLeads.map((lead) => (
          <details class="dept-lead-card">
            <summary>
              <div class="dept-summary-left">
                <div class="blank-avatar"></div>
                <div>
                  <h4>{lead.dept}</h4>
                  <span>{lead.focus}</span>
                </div>
              </div>
              <i class="ri-add-line toggle-icon"></i>
            </summary>
            <div class="dept-details">
              <h5>Core Responsibilities</h5>
              <ul>
                {lead.responsibilities.map((res) => {
                  const [bold, ...rest] = res.split(': ');
                  return <li><strong>{bold}:</strong> {rest.join(': ')}</li>
                })}
              </ul>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Laboratory Timeline</p>
        <h2>A facility built for long-term partnerships.</h2>
      </div>

      <div class="history-grid">
        {history.map((milestone) => (
          <div class="history-card">
            <p class="history-year">{milestone.year}</p>
            <h3 class="history-title">{milestone.title}</h3>
            <p class="history-desc">{milestone.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <CTA
        title="Ready to align on quality expectations?"
        description="Our team is ready to discuss your regulatory pathway and technical requirements."
        primaryLabel="Talk to our team"
        primaryHref="/contact"
        secondaryLabel="Review capabilities"
        secondaryHref="/capabilities"
      />
    </div>
  </section>
</Layout>

<style>
  .breadcrumb { font-size: 0.875rem; margin-bottom: 2rem; display: flex; gap: 0.5rem; }
  .breadcrumb a { color: rgba(255, 255, 255, 0.6); text-decoration: none; }
  .breadcrumb a:hover { color: var(--teal); }

  /* Founders Stack */
  .founder-stack { display: flex; flex-direction: column; gap: 3rem; margin-top: 3rem; }
  .founder-card { 
    background: rgba(255, 255, 255, 0.02); 
    border: 1px solid rgba(255, 255, 255, 0.05); 
    padding: 3rem; border-radius: 12px; 
  }

  .founder-header { display: grid; grid-template-columns: 200px 1fr; gap: 3rem; align-items: start; }
  .founder-img-frame { width: 200px; height: 250px; background: #0a0e17; border-radius: 8px; overflow: hidden; border: 1px solid rgba(0, 230, 168, 0.2); }
  .founder-avatar { width: 100%; height: 100%; object-fit: cover; opacity: 0.8; }

  .founder-role { color: var(--teal); text-transform: uppercase; font-weight: 800; font-size: 0.75rem; letter-spacing: 0.1em; margin-bottom: 0.5rem; }
  .founder-info h3 { font-size: 2rem; color: #fff; margin-bottom: 1.5rem; }

  .founder-vitals { list-style: none; padding: 0; display: flex; flex-direction: column; gap: 1rem; }
  .founder-vitals li { font-size: 0.95rem; color: rgba(255, 255, 255, 0.7); line-height: 1.5; }
  .founder-vitals strong { color: #fff; }

  .founder-bio { margin-top: 2rem; padding-top: 2rem; border-top: 1px solid rgba(255, 255, 255, 0.05); }
  .founder-bio p { line-height: 1.8; color: rgba(255, 255, 255, 0.8); font-size: 1.05rem; }

  /* Dept Lead Grid */
  .dept-lead-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(450px, 1fr)); gap: 1.5rem; margin-top: 3rem; }
  .dept-lead-card { background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05); border-radius: 12px; overflow: hidden; }
  .dept-lead-card summary { padding: 1.5rem 2rem; cursor: pointer; display: flex; justify-content: space-between; align-items: center; list-style: none; }
  .dept-lead-card summary::-webkit-details-marker { display: none; }

  .dept-summary-left { display: flex; align-items: center; gap: 1.5rem; }
  .blank-avatar { width: 50px; height: 50px; border-radius: 50%; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); }
  
  .dept-summary-left h4 { color: #fff; margin: 0; font-size: 1.1rem; }
  .dept-summary-left span { font-size: 0.8rem; color: var(--teal); text-transform: uppercase; letter-spacing: 0.05em; }
  .toggle-icon { font-size: 1.25rem; color: rgba(255,255,255,0.2); transition: 0.3s; }
  .dept-lead-card[open] .toggle-icon { transform: rotate(45deg); color: var(--teal); }

  .dept-details { padding: 0 2rem 2rem 6.5rem; }
  .dept-details h5 { color: #fff; font-size: 0.9rem; margin-bottom: 1rem; text-transform: uppercase; }
  .dept-details ul { list-style: none; padding: 0; display: flex; flex-direction: column; gap: 0.75rem; }
  .dept-details li { font-size: 0.9rem; color: rgba(255,255,255,0.6); line-height: 1.4; }
  .dept-details strong { color: rgba(255,255,255,0.9); }

  /* History Grid */
  .history-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-top: 3rem; }
  .history-card { background: rgba(255, 255, 255, 0.02); border-top: 3px solid var(--teal); padding: 2rem; border-radius: 0 0 12px 12px; }
  .history-year { color: var(--teal); font-size: 0.875rem; font-weight: 800; margin-bottom: 0.5rem; }
  .history-title { font-size: 1.15rem; color: #fff; margin-bottom: 0.75rem; }
  .history-desc { color: rgba(255, 255, 255, 0.6); font-size: 0.9rem; line-height: 1.6; }

  @media (max-width: 768px) {
    .founder-header { grid-template-columns: 1fr; gap: 1.5rem; text-align: center; }
    .founder-img-frame { margin: 0 auto; }
    .dept-lead-grid { grid-template-columns: 1fr; }
    .dept-details { padding-left: 2rem; }
  }
</style>