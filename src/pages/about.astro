---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { siteData, history } from '../data/siteData';

const executives = [
  {
    name: "Benny McKee",
    role: "CEO & Cofounder",
    image: "/images/benny-placeholder.jpg",
    vitals: "Dallas Baptist University (BS Biology); HACCP & Food Safety Certified.",
    bio: "With nearly three decades of executive leadership, Benny drives organizational efficiency and customer-focused service. His expertise spans strategic planning, operational management, and regulatory stewardship."
  },
  {
    name: "Dr. Cheri Turman-Ballard",
    role: "CSO & Cofounder",
    image: "/images/cheri-placeholder.jpg",
    vitals: "PhD Biomedical Sciences (UT MD Anderson); MS/BS Chemistry (SFA).",
    bio: "A distinguished pharmaceutical scientist with over 25 years of experience across dietary supplements and pharma. Her leadership ensures rigorous method development and robust quality standards."
  },
  {
    name: "Amber Howeth",
    role: "CFO",
    image: "/images/amber-placeholder.jpg",
    vitals: "Texas A&M Commerce (BS Business & Psychology).",
    bio: "Possessing over 20 years of expertise in accounting and financial management for the food and pharmaceutical sectors, Amber ensures fiscal precision and sustainable growth strategies."
  }
];

const departmentGroups = [
  {
    department: "Chemistry",
    leads: [
      { role: "Organic Lead", expertise: "Targeted analysis of vitamins, actives, and degradation products via LCMS/GCMS." },
      { role: "Inorganic Lead", expertise: "Mineral profiling, heavy metals, and ICP-based analytical pathways." },
      { role: "Wet Chemistry Lead", expertise: "Titrations, physical testing, and compositional analysis (Protein/Nitrogen)." }
    ]
  },
  {
    department: "Microbiology",
    leads: [
      { role: "Safety & Pathogens Lead", expertise: "Oversight of USP <61>/<62> and BAM screening protocols." },
      { role: "Efficacy & Challenge Lead", expertise: "Specialized study design for AET and Time-Kill studies." }
    ]
  },
  {
    department: "Support Services",
    leads: [
      { role: "Stability Lead", expertise: "Management of ICH storage conditions and shelf-life data modeling." },
      { role: "Quality Control Lead", expertise: "Independent data review and QMS version control oversight." }
    ]
  }
];
---

<Layout
  title={`Leadership - ${siteData.name}`}
  description="Meet the executive leadership and technical department leads of BioChroma Analytical Labs."
>
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span class="text-emerald-400 opacity-80">About</span>
      </nav>

      <div class="hero-grid">
        <div class="hero-copy">
          <p class="hero-eyebrow">The BioChroma Mission</p>
          <h1>Leadership committed to precision and excellence.</h1>
          <p class="hero-lead">
            Based in the DFW metroplex, our team provides analytical solutions tailored precisely to client needs and regulatory demands. We serve as a technical extension of your R&D team.
          </p>
        </div>

        <div class="hero-media-frame">
          <img src="https://images.unsplash.com/photo-1581093458791-9f3c3900df4b?w=800&q=80" alt="BioChroma Laboratory Facility" />
          <div class="hero-media-caption">
            <p>DFW Analytical Facility</p>
            <span>State-of-the-art instrumentation suite.</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Executive Suite</p>
        <h2>Strategic & Scientific Stewardship</h2>
      </div>

      <div class="executive-triad">
        {executives.map((exec) => (
          <article class="exec-card">
            <div class="exec-visual">
              <div class="exec-img-frame">
                 <img src={exec.image} alt={exec.name} />
              </div>
              <div class="exec-title-box">
                <span class="exec-role">{exec.role}</span>
                <h3>{exec.name}</h3>
              </div>
            </div>
            <div class="exec-content">
              <p class="exec-vitals"><strong>Background:</strong> {exec.vitals}</p>
              <p class="exec-bio">{exec.bio}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section chapter-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Operational Leadership</p>
        <h2>Technical Department Oversight</h2>
      </div>

      <div class="dept-group-stack">
        {departmentGroups.map((group) => (
          <div class="dept-section">
            <h3 class="dept-group-title">{group.department} Department</h3>
            <div class="lead-sub-grid">
              {group.leads.map((lead) => (
                <div class="lead-mini-card">
                  <div class="lead-head">
                    <div class="lead-avatar-placeholder"></div>
                    <h4>{lead.role}</h4>
                  </div>
                  <p>{lead.expertise}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <CTA
        title="Connect with our Technical Leads"
        description="Our department heads are available to discuss specific method requirements and program scoping."
        primaryLabel="Contact the Lab"
        primaryHref="/contact"
        secondaryLabel="View Full Capabilities"
        secondaryHref="/capabilities"
      />
    </div>
  </section>
</Layout>

<style>
  /* Executive Triad - Forced 3 Columns on Desktop */
  .executive-triad {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 3rem;
  }

  @media (min-width: 1024px) {
    .executive-triad {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .exec-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: 0.3s;
  }
  .exec-card:hover { border-color: rgba(36, 199, 143, 0.4); transform: translateY(-3px); }

  /* Top-down layout for 3-column fit */
  .exec-visual { 
    padding: 2rem; 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    text-align: center;
    gap: 1.5rem; 
    border-bottom: 1px solid rgba(255,255,255,0.05); 
  }
  .exec-img-frame { width: 120px; height: 120px; border-radius: 50%; background: #080c14; border: 1px solid rgba(36, 199, 143, 0.2); overflow: hidden; }
  .exec-img-frame img { width: 100%; height: 100%; object-fit: cover; opacity: 0.7; }
  
  .exec-role { color: var(--color-primary); font-weight: 800; font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.1em; }
  .exec-title-box h3 { color: #fff; font-size: 1.35rem; margin-top: 0.25rem; }

  .exec-content { padding: 2rem; flex-grow: 1; display: flex; flex-direction: column; }
  .exec-vitals { font-size: 0.8rem; color: #fff; margin-bottom: 1rem; line-height: 1.4; font-style: italic; opacity: 0.9; }
  .exec-bio { font-size: 0.9rem; color: rgba(255,255,255,0.6); line-height: 1.6; }

  /* Departmental Matrix */
  .dept-group-stack { display: flex; flex-direction: column; gap: 4rem; margin-top: 4rem; }
  .dept-group-title { 
    color: #fff; font-size: 1.25rem; margin-bottom: 1.5rem; padding-left: 1rem; 
    border-left: 3px solid var(--color-primary); 
  }
  
  .lead-sub-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .lead-mini-card {
    background: rgba(255,255,255,0.01);
    border: 1px solid rgba(255,255,255,0.05);
    padding: 1.5rem;
    border-radius: 8px;
    transition: 0.2s;
  }
  .lead-mini-card:hover { border-color: rgba(36, 199, 143, 0.3); background: rgba(36, 199, 143, 0.02); }

  .lead-head { display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; }
  .lead-avatar-placeholder { width: 40px; height: 40px; border-radius: 50%; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); }
  .lead-head h4 { color: #fff; font-size: 1rem; margin: 0; }
  .lead-mini-card p { font-size: 0.85rem; color: rgba(255,255,255,0.5); line-height: 1.5; margin: 0; }

  @media (max-width: 1023px) {
    .exec-visual { flex-direction: row; text-align: left; }
    .exec-img-frame { width: 80px; height: 80px; }
  }
</style>