---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { siteData, teamMembers, history } from "../data/siteData";
---

<Layout
  title={`About Us - ${siteData.name}`}
  description="Learn about our mission, quality mindset, and the teams we support"
>
  <!-- Hero Section -->
  <section
    class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          About {siteData.name}
        </h1>
        <p class="text-xl text-gray-300">
          A professional analytical laboratory focused on quality systems, clear data, and dependable timelines.
        </p>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-bold text-white mb-8 text-center">
          Our Mission
        </h2>
        <div class="prose prose-invert max-w-none">
          <p class="text-xl text-gray-300 mb-6">
            BioChroma Analytical Labs delivers defensible analytical data for regulated products. We focus on documented methods, disciplined workflows, and transparent reporting so teams can make decisions with confidence.
          </p>
          <p class="text-lg text-gray-400 mb-6">
            We support quality, regulatory, and R&amp;D teams with services that scale from single-method projects to long-term testing programs. Every engagement is scoped for clarity, compliance, and predictable delivery.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">
        Our Quality Mindset
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div
          class="bg-slate-800 p-8 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-20 h-20 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-6"
          >
            <i class="ri-shield-check-line text-4xl text-orange-500"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">Integrity</h3>
          <p class="text-gray-400 leading-relaxed">
            Data integrity and documented processes guide every test and report.
          </p>
        </div>
        <div
          class="bg-slate-800 p-8 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-20 h-20 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-6"
          >
            <i class="ri-flask-line text-4xl text-orange-500"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">Technical rigor</h3>
          <p class="text-gray-400 leading-relaxed">
            Methods are developed, validated, and reviewed with precision and care.
          </p>
        </div>
        <div
          class="bg-slate-800 p-8 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-20 h-20 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-6"
          >
            <i class="ri-hand-heart-line text-4xl text-orange-500"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">Partnership</h3>
          <p class="text-gray-400 leading-relaxed">
            We collaborate closely with client teams to align on scope, timing, and reporting.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- History/Timeline Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">
        Our Journey
      </h2>
      <div class="max-w-4xl mx-auto">
        <div class="relative">
          <!-- Timeline Line -->
          <div
            class="absolute left-8 top-0 bottom-0 w-0.5 bg-orange-500/30 hidden md:block"
          >
          </div>

          <div class="space-y-12">
            {
              history.map((milestone) => (
                <div class="relative flex items-start gap-6">
                  <div class="hidden md:block shrink-0">
                    <div class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center border-4 border-slate-900">
                      <span class="text-white font-bold text-sm">
                        {milestone.year}
                      </span>
                    </div>
                  </div>
                  <div class="flex-1 bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-orange-500 transition-all">
                    <div class="md:hidden mb-2">
                      <span class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                        {milestone.year}
                      </span>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-2">
                      {milestone.title}
                    </h3>
                    <p class="text-gray-300 leading-relaxed">
                      {milestone.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-4 text-center">
        Scientific Leadership
      </h2>
      <p class="text-xl text-gray-300 mb-12 text-center max-w-2xl mx-auto">
        Meet the experts who guide method development, testing execution, and quality review.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-6 gap-8">
        {
          teamMembers.map((member, index) => {
            let className = "";
            if (index + 1 == 4) {
              className = "lg:col-start-2";
            }
            else if (index + 1 == 5) {
              className = "md:col-start-2 lg:col-start-4";
            }
            return (
              <div class={`bg-slate-900 p-8 rounded-xl border border-slate-700 hover:border-orange-500 transition-all transform hover:scale-105 md:col-span-2 ${className}`}>
                <div class="text-center mb-6">
                  <div class="w-40 h-40 rounded-full mx-auto mb-4 overflow-hidden border-4 border-orange-500/20">
                    <Image
                      src={member.image}
                      alt={`${member.name} - ${member.role}`}
                      width={400}
                      height={400}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <h3 class="text-xl font-bold text-white mb-2">
                    {member.name}
                  </h3>
                  <p class="text-orange-500 mb-1 font-semibold">
                    {member.role}
                  </p>
                  <p class="text-gray-400 text-sm mb-3">
                    {member.specialization}
                  </p>
                  <p class="text-gray-500 text-xs">
                    {member.experience} experience
                  </p>
                </div>
                <p class="text-gray-300 text-sm leading-relaxed mb-4 text-center">
                  {member.bio}
                </p>
                <div class="flex flex-wrap gap-2 justify-center">
                  {member.certifications.map((cert) => (
                    <span class="bg-slate-800 text-gray-300 text-xs px-3 py-1 rounded-full border border-slate-700">
                      {cert}
                    </span>
                  ))}
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
