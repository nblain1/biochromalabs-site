---
import Layout from '../layouts/Layout.astro';
import SectionIntro from '../components/SectionIntro.astro';
import IconCard from '../components/IconCard.astro';
import CTA from '../components/CTA.astro';
import { siteData, qualityCommitments, history, teamMembers } from '../data/siteData';
---

<Layout
  title={`Quality - ${siteData.name}`}
  description="Learn how our quality system, leadership, and documentation deliver confidence in every report."
>
  <section class="section-spacing pt-28">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
        <div>
          <p class="text-xs uppercase tracking-[0.3em] text-emerald-300">Quality &amp; trust</p>
          <h1 class="mt-4 text-4xl font-semibold text-white sm:text-5xl">
            Built for compliance, designed for confidence.
          </h1>
          <p class="mt-4 text-base text-slate-300 sm:text-lg">
            Our quality system ensures every method, sample, and report is traceable, reviewed, and ready for audit.
            We focus on predictable delivery so your teams can make fast, defensible decisions.
          </p>
        </div>
        <div class="card-surface space-y-4">
          <p class="text-sm font-semibold text-white">Quality system highlights</p>
          <ul class="space-y-3 text-sm text-slate-300">
            <li class="flex items-start gap-3">
              <i class="ri-shield-check-line text-emerald-300 mt-0.5"></i>
              Controlled procedures with documented change management.
            </li>
            <li class="flex items-start gap-3">
              <i class="ri-lock-line text-emerald-300 mt-0.5"></i>
              Data integrity controls and secure reporting workflows.
            </li>
            <li class="flex items-start gap-3">
              <i class="ri-user-star-line text-emerald-300 mt-0.5"></i>
              Dedicated project leads for consistent communication.
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slate-950">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Commitments"
        title="Operational guardrails for regulated programs"
        description="We combine process discipline with experienced analysts to keep data quality high and timelines clear."
      />
      <div class="mt-10 grid gap-6 md:grid-cols-3">
        {qualityCommitments.map((item) => (
          <IconCard icon={item.icon} title={item.title} description={item.description} />
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Leadership"
        title="Scientific leadership that supports every engagement"
        description="Meet the experts responsible for method development, execution, and QA review."
      />
      <div class="mt-10 grid gap-6 md:grid-cols-3">
        {teamMembers.map((member) => (
          <article class="card-surface flex flex-col gap-4">
            <div class="flex items-center gap-4">
              <img
                src={member.image}
                alt={`${member.name} - ${member.role}`}
                class="h-16 w-16 rounded-2xl object-cover"
                loading="lazy"
              />
              <div>
                <h3 class="text-lg font-semibold text-white">{member.name}</h3>
                <p class="text-sm text-emerald-200">{member.role}</p>
                <p class="text-xs text-slate-400">{member.specialization}</p>
              </div>
            </div>
            <p class="text-sm text-slate-300">{member.bio}</p>
            <div class="flex flex-wrap gap-2">
              {member.certifications.map((cert) => (
                <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-slate-200">
                  {cert}
                </span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slate-950">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Timeline"
        title="A laboratory built for long-term partnerships"
        description="We have expanded capabilities and quality systems alongside our clients."
      />
      <div class="mt-10 grid gap-6 md:grid-cols-2">
        {history.map((milestone) => (
          <div class="card-surface">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-200">{milestone.year}</p>
            <h3 class="mt-3 text-lg font-semibold text-white">{milestone.title}</h3>
            <p class="mt-2 text-sm text-slate-300">{milestone.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <CTA
        title="Want to align on quality expectations?"
        description="We can provide quality agreements, documentation packages, and audit-ready reports built for your regulatory pathway."
        primaryLabel="Talk to our team"
        primaryHref="/contact"
        secondaryLabel="Review capabilities"
        secondaryHref="/services"
      />
    </div>
  </section>
</Layout>
