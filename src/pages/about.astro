---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { siteData } from '../data/siteData';

// Import local assets
import aboutHero from '../assets/about-hero.jpg';
import execBenny from '../assets/exec-benny.jpg';
import execCheri from '../assets/exec-cheri.jpg';
import execAmber from '../assets/exec-amber.jpg';

const executives = [
  {
    name: "Benny McKee",
    role: "CEO & Cofounder",
    image: execBenny, // Using imported asset object
    vitals: "Dallas Baptist University (BS Biology); HACCP & Food Safety Certified.",
    bio: "With nearly three decades of executive leadership, Benny drives organizational efficiency and customer-focused service. His expertise spans strategic planning, operational management, and regulatory stewardship."
  },
  {
    name: "Dr. Cheri Turman-Ballard",
    role: "CSO & Cofounder",
    image: execCheri, // Using imported asset object
    vitals: "PhD Biomedical Sciences (UT MD Anderson); MS/BS Chemistry (SFA).",
    bio: "A distinguished pharmaceutical scientist with over 25 years of experience across dietary supplements and pharma. Her leadership ensures rigorous method development and robust quality standards."
  },
  {
    name: "Amber Howeth",
    role: "CFO",
    image: execAmber, // Using imported asset object
    vitals: "Texas A&M Commerce (BS Business & Psychology).",
    bio: "Possessing over 20 years of expertise in accounting and financial management for the food and pharmaceutical sectors, Amber ensures fiscal precision and sustainable growth strategies."
  }
];

const departmentGroups = [
  {
    department: "Chemistry",
    leads: [
      { role: "Organic Lead", expertise: "Targeted analysis of vitamins, actives, and degradation products via LCMS/GCMS." },
      { role: "Inorganic Lead", expertise: "Mineral profiling, heavy metals, and ICP-based analytical pathways." },
      { role: "Wet Chemistry Lead", expertise: "Titrations, physical testing, and compositional analysis (Protein/Nitrogen)." }
    ]
  },
  {
    department: "Microbiology",
    leads: [
      { role: "Safety & Pathogens Lead", expertise: "Oversight of USP <61>/<62> and BAM screening protocols." },
      { role: "Efficacy & Challenge Lead", expertise: "Specialized study design for AET and Time-Kill studies." }
    ]
  },
  {
    department: "Support Services",
    leads: [
      { role: "Stability Lead", expertise: "Management of ICH storage conditions and shelf-life data modeling." },
      { role: "Quality Control Lead", expertise: "Independent data review and QMS version control oversight." }
    ]
  }
];
---

<Layout
  title={`Leadership - ${siteData.name}`}
  description="Meet the executive leadership and technical department leads of BioChroma Analytical Labs."
>
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">></span>
        <span class="text-emerald-400 opacity-80">About</span>
      </nav>

      <div class="hero-grid">
        <div class="hero-copy">
          <p class="hero-eyebrow">The BioChroma Mission</p>
          <h1>Leadership committed to precision and excellence.</h1>
          <p class="hero-lead">
            Based in the DFW metroplex, our team provides analytical solutions tailored precisely to client needs and regulatory demands. We serve as a technical extension of your R&D team.
          </p>
        </div>

        <div class="hero-media-frame">
          <Image 
            src={aboutHero} 
            alt="BioChroma Laboratory Facility" 
            loading="eager"
            class="w-full h-full object-cover"
          />
          <div class="hero-media-caption">
            <p>DFW Analytical Facility</p>
            <span>State-of-the-art instrumentation suite.</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="home-section border-t border-white/5">
    <div class="home-shell">
      <div class="section-heading">
        <p>Executive Suite</p>
        <h2>Strategic & Scientific Stewardship</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mt-12">
        {executives.map((exec) => (
          <article class="group flex flex-col bg-white/5 border border-white/10 rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-1 hover:border-emerald-400/30 hover:shadow-[0_10px_30px_-10px_rgba(36,199,143,0.15)]">
            <div class="p-8 border-b border-white/5 flex flex-col md:flex-row lg:flex-col items-center md:items-start lg:items-center text-center md:text-left lg:text-center gap-6">
              <div class="w-24 h-24 lg:w-32 lg:h-32 rounded-full border border-emerald-400/20 bg-slate-900 overflow-hidden shrink-0">
                 <Image 
                  src={exec.image} 
                  alt={exec.name} 
                  class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity" 
                 />
              </div>
              <div>
                <span class="block text-emerald-400 font-bold text-xs uppercase tracking-widest mb-1">{exec.role}</span>
                <h3 class="text-white text-2xl font-bold">{exec.name}</h3>
              </div>
            </div>
            <div class="p-8 flex-grow flex flex-col bg-slate-900/50">
              <p class="text-sm text-white italic opacity-90 mb-4 leading-relaxed"><strong>Background:</strong> {exec.vitals}</p>
              <p class="text-sm text-slate-400 leading-relaxed">{exec.bio}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section bg-slate-900/50 border-t border-white/5">
    <div class="home-shell">
      <div class="section-heading">
        <p>Operational Leadership</p>
        <h2>Technical Department Oversight</h2>
      </div>

      <div class="flex flex-col gap-16 mt-12">
        {departmentGroups.map((group) => (
          <div>
            <h3 class="text-xl font-bold text-white mb-6 border-l-4 border-emerald-400 pl-4">{group.department} Department</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {group.leads.map((lead) => (
                <div class="bg-white/5 border border-white/10 p-6 rounded-xl hover:border-emerald-400/30 hover:bg-emerald-400/5 transition-all duration-300 group">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="w-10 h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center group-hover:border-emerald-400/30 transition-colors">
                      <i class="ri-user-settings-line text-slate-400 group-hover:text-emerald-400 transition-colors"></i>
                    </div>
                    <h4 class="text-white font-semibold text-lg">{lead.role}</h4>
                  </div>
                  <p class="text-slate-400 text-sm leading-relaxed">{lead.expertise}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section">
    <div class="home-shell">
      <CTA
        title="Connect with our Technical Leads"
        description="Our department heads are available to discuss specific method requirements and program scoping."
        primaryLabel="Contact the Lab"
        primaryHref="/contact"
        secondaryLabel="View Full Capabilities"
        secondaryHref="/capabilities"
      />
    </div>
  </section>
</Layout>

<style>
  .breadcrumb { font-size: 0.875rem; margin-bottom: 2rem; display: flex; gap: 0.5rem; }
  .breadcrumb a { color: rgba(255, 255, 255, 0.6); text-decoration: none; transition: 0.2s; }
  .breadcrumb a:hover { color: var(--color-primary); }
</style>