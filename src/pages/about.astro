---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { pageCopy, pageData } from '../data/content';
import aboutHero from '../assets/about-hero.jpg';
import execBenny from '../assets/exec-benny.jpg';
import execCheri from '../assets/exec-cheri.jpg';
import execAmber from '../assets/exec-amber.jpg';

const copy = pageCopy.about;
const data = pageData.about;
const executiveImages = [execBenny, execCheri, execAmber];
---

<Layout title={copy.frontmatter.layoutTitle} description={copy.frontmatter.layoutDescription}>
  <section class="home-hero"><div class="home-shell"><div class="hero-grid"><div class="hero-copy"><p class="hero-eyebrow">{copy.frontmatter.heroEyebrow}</p><h1>{copy.frontmatter.heroTitle}</h1><p class="hero-lead">{copy.frontmatter.heroLead}</p></div><aside class="hero-media-frame" aria-label="Leadership"><Image src={aboutHero} alt="BioChroma leadership" loading="eager" class="w-full h-full object-cover rounded-2xl" /><div class="hero-media-caption"><p>{copy.frontmatter.heroMediaTitle}</p><span>{copy.frontmatter.heroMediaText}</span></div></aside></div></div></section>
  <section class="home-section border-t border-white/5"><div class="home-shell prose prose-invert max-w-4xl"><copy.Content /></div></section>

  <section class="home-section border-t border-white/5"><div class="home-shell"><div class="section-heading"><p>{copy.frontmatter.executiveSectionEyebrow}</p><h2>{copy.frontmatter.executiveSectionTitle}</h2></div><div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10">{data.executives.map((exec,index)=>(<article class="bg-white/5 border border-white/10 rounded-xl p-6"><Image src={executiveImages[index]} alt={exec.name} class="w-full h-56 object-cover rounded-lg mb-4" /><h3 class="text-white text-xl">{exec.name}</h3><p class="text-emerald-400 text-sm">{exec.role}</p><p class="text-slate-400 text-sm mt-2">{exec.vitals}</p><p class="text-slate-300 text-sm mt-3">{exec.bio}</p></article>))}</div></div></section>

  <section class="home-section border-t border-white/5"><div class="home-shell"><div class="section-heading"><p>{copy.frontmatter.departmentSectionEyebrow}</p><h2>{copy.frontmatter.departmentSectionTitle}</h2></div><div class="space-y-8 mt-10">{data.departmentGroups.map((group)=>(<div class="bg-white/5 border border-white/10 rounded-xl p-6"><h3 class="text-white text-2xl mb-4">{group.department}</h3><div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">{group.leads.map((lead)=>(<article class="bg-slate-900/60 border border-white/5 rounded-lg p-4"><h4 class="text-white">{lead.name}</h4><p class="text-emerald-400 text-sm">{lead.role}</p><p class="text-slate-400 text-xs mt-1">{lead.education}</p><p class="text-slate-300 text-sm mt-3">{lead.expertise}</p><p class="text-slate-400 text-sm mt-3">{lead.deepDive}</p></article>))}</div></div>))}</div></div></section>

  <section class="home-section"><div class="home-shell"><CTA {...data.cta} /></div></section>
</Layout>
