---
import Layout from '../layouts/Layout.astro';
import SectionIntro from '../components/SectionIntro.astro';
import FeatureCard from '../components/FeatureCard.astro';
import StatCard from '../components/StatCard.astro';
import ProcessStep from '../components/ProcessStep.astro';
import IconCard from '../components/IconCard.astro';
import CTA from '../components/CTA.astro';
import FaqList from '../components/FaqList.astro';
import {
  siteData,
  heroStats,
  capabilityHighlights,
  industries,
  processSteps,
  testimonials,
  faqs,
} from '../data/siteData';
---

<Layout title={`${siteData.name} - ${siteData.tagline}`} description={siteData.description}>
  <section class="section-spacing pt-28 section-divider">
    <div class="mx-auto grid max-w-6xl items-center gap-12 px-4 sm:px-6 lg:grid-cols-[1.1fr_0.9fr] lg:px-8">
      <div class="space-y-6 motion-fade-up">
        <div class="inline-flex items-center gap-2 rounded-full border border-emerald-500/30 bg-emerald-500/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-emerald-200">
          Trusted analytical programs
        </div>
        <h1 class="text-4xl font-semibold text-white sm:text-5xl lg:text-6xl">
          BioChroma Analytical Labs LLC bridges technical gaps in product development.
        </h1>
        <p class="text-base text-slate-300 sm:text-lg">
          Based in the DFW metroplex in the heart of Texas, we provide analytical testing, consulting, and quality or
          regulatory support to guide products from inception to the marketplace.
        </p>
        <div class="flex flex-col gap-3 sm:flex-row">
          <a class="btn-primary btn-cta motion-sheen" href="/contact">
            Start a project
            <i class="ri-arrow-right-up-line"></i>
          </a>
          <a class="btn-secondary btn-cta" href="/capabilities">
            View capabilities
            <i class="ri-arrow-right-line"></i>
          </a>
        </div>
        <div class="grid gap-4 sm:grid-cols-3 stagger-fade-up">
          {heroStats.map((stat) => (
            <StatCard number={stat.number} label={stat.label} note={stat.note} />
          ))}
        </div>
      </div>
      <div class="relative motion-fade-in">
        <div class="hero-accent"></div>
        <div class="absolute -inset-4 rounded-[32px] bg-gradient-to-br from-emerald-500/20 via-transparent to-indigo-500/20 blur-2xl"></div>
        <div class="relative overflow-hidden rounded-[28px] border border-white/10 bg-slate-900/70 shadow-xl motion-float">
          <img
            src="https://images.unsplash.com/photo-1581090464777-f3220bbe1b8b?w=1200&h=900&fit=crop&q=80"
            alt="Laboratory analyst preparing chromatography samples"
            class="h-full w-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-slate-950/80 via-transparent to-transparent"></div>
          <div class="absolute bottom-6 left-6 right-6 rounded-2xl border border-white/10 bg-slate-950/70 p-5">
            <p class="text-sm text-white font-semibold">End-to-end product support</p>
            <p class="text-xs text-slate-300 mt-2">
              Analytical testing, consulting, and quality guidance from concept to market.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slate-950 section-divider">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Capabilities"
        title="Six capability areas that support product quality from concept to scale"
        description="We provide microbiology, chemistry, stability, laboratory studies, consulting, and product development support tailored to regulated consumer products."
      />
      <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3 stagger-fade-up">
        {capabilityHighlights.map((capability) => (
          <FeatureCard
            icon={capability.icon}
            title={capability.title}
            description={capability.description}
            bullets={capability.bullets}
            href="/capabilities"
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing section-divider">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Who we support"
        title="Programs tailored to the teams that move regulated science forward"
        description="Our teams bring experience across R&amp;D, formulations, scale-up, testing, and quality support for diverse consumer products."
      />
      <div class="mt-10 flex flex-wrap gap-3">
        {industries.map((industry) => (
          <a class="support-chip motion-fade-up" href="/capabilities">
            <span class="text-sm font-semibold text-white">{industry}</span>
            <i class="ri-arrow-right-up-line text-emerald-300"></i>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slate-950 section-divider">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Process"
        title="Product development stages from discovery to launch"
        description="We align consulting, testing, and formulation support to match each stage of the product journey."
      />
      <div class="mt-10 process-stepper stagger-fade-up">
        {processSteps.map((step, index) => (
          <ProcessStep index={index + 1} title={step.title} description={step.description} />
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing section-divider">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Client feedback"
        title="Trusted by quality and regulatory leaders"
        description="We deliver clear data, credible documentation, and proactive communication at every stage."
      />
      <div class="mt-10 grid gap-6 md:grid-cols-3 stagger-fade-up">
        {testimonials.map((item) => (
          <div class="testimonial-card flex flex-col gap-4">
            <p class="text-sm text-slate-200">“{item.content}”</p>
            <div>
              <p class="text-sm font-semibold text-white">{item.name}</p>
              <p class="text-xs text-slate-400">{item.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slate-950 section-divider">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
        <div>
          <SectionIntro
            eyebrow="FAQ"
            title="Quick answers about BioChroma Analytical Labs LLC"
            description="Learn how our testing, consulting, and product development support align to your goals."
          />
          <div class="mt-8">
            <FaqList items={faqs} />
          </div>
        </div>
        <div class="space-y-6">
          <IconCard
            icon="ri-shield-check-line"
            title="Quality & regulatory advice"
            description="Guidance on CFR expectations, quality program setup, and label do’s and don’ts."
          />
          <IconCard
            icon="ri-store-2-line"
            title="Manufacturing & packaging guidance"
            description="Support for contract manufacturer selection, inspections, and container closure decisions."
          />
          <IconCard
            icon="ri-flask-line"
            title="Ingredient stability insight"
            description="Advice on ingredient stability, formulation, and processing conditions that impact shelf life."
          />
        </div>
      </div>
    </div>
  </section>

  <section class="section-spacing section-divider">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <CTA
        title="Ready to scope your program?"
        description="Tell us about your samples, timelines, and regulatory requirements. We'll respond with a scoped plan and clear next steps."
        primaryLabel="Request a quote"
        primaryHref="/contact"
        secondaryLabel="Review capabilities"
        secondaryHref="/capabilities"
      />
    </div>
  </section>
</Layout>
