---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Services from '../components/Classes.astro';
import { siteData } from '../data/siteData';

const steps = [
  { title: "Scope", description: "Define tests, timelines, and reporting needs." },
  { title: "Receive", description: "Sample intake with documented chain of custody." },
  { title: "Test", description: "Analytical execution with quality review." },
  { title: "Report", description: "Clear, audit-ready results delivered securely." },
];
---

<Layout title={`${siteData.name} - ${siteData.tagline}`} description={siteData.description}>
  <Hero />
  <Features />
  <Services />

  <!-- How It Works -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">How it works</h2>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          A streamlined workflow that keeps projects on track.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 max-w-5xl mx-auto">
        {steps.map((step, index) => (
          <div class="bg-slate-900 p-6 rounded-xl border border-slate-700 text-center">
            <div class="w-12 h-12 bg-[#4db848]/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-[#4db848] font-bold">{index + 1}</span>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">{step.title}</h3>
            <p class="text-gray-400 text-sm leading-relaxed">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-linear-to-r from-[#4db848] to-[#264177]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Ready to scope your testing?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Tell us about your samples and timelines. We'll respond with a clear plan.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-3 bg-white text-[#4db848] hover:bg-slate-100 px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105 shadow-lg"
      >
        Request a Quote
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </section>
</Layout>
