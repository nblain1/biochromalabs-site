---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { pageCopy, pageData } from '../data/content';
import qualityHero from '../assets/quality-hero.jpg';

const copy = pageCopy.quality;
const data = pageData.quality;
---

<Layout title={copy.frontmatter.layoutTitle} description={copy.frontmatter.layoutDescription}>
  <section class="home-hero"><div class="home-shell"><div class="hero-grid"><div class="hero-copy"><p class="hero-eyebrow">{copy.frontmatter.heroEyebrow}</p><h1>{copy.frontmatter.heroTitle}</h1><p class="hero-lead">{copy.frontmatter.heroLead}</p></div><aside class="hero-media-frame" aria-label="Quality"><Image src={qualityHero} alt="BioChroma quality" loading="eager" class="w-full h-full object-cover rounded-2xl" /></aside></div></div></section>
  <section class="home-section border-t border-white/5"><div class="home-shell prose prose-invert max-w-4xl"><copy.Content /></div></section>

  <section class="home-section border-t border-white/5"><div class="home-shell"><div class="section-heading"><p>{copy.frontmatter.sectionQuickLinksTitle}</p><h2>{copy.frontmatter.sectionSystemTitle}</h2></div><div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-10">{data.qseItems.map((item)=>(<article class="bg-white/5 border border-white/10 rounded-xl p-6"><h3 class="text-white text-lg">{item.title}</h3><p class="text-slate-300 text-sm mt-2">{item.description}</p></article>))}</div></div></section>

  <section class="home-section border-t border-white/5"><div class="home-shell"><div class="section-heading"><p>{copy.frontmatter.sectionSystemEyebrow}</p><h2>{copy.frontmatter.sectionSystemTitle}</h2></div><div class="space-y-8 mt-10">{data.qseDeepDive.map((pillar)=>(<article id={pillar.id} class="bg-white/5 border border-white/10 rounded-xl p-6"><h3 class="text-white text-2xl">{pillar.title}</h3><p class="text-emerald-400 text-sm">{pillar.subtitle}</p><p class="text-slate-300 mt-3">{pillar.summary}</p><div class="space-y-4 mt-6">{pillar.elements.map((element)=>(<div class="bg-slate-900/70 border border-white/5 rounded-lg p-4"><h4 class="text-white">{element.name}</h4><p class="text-slate-300 text-sm mt-2">{element.implementation}</p><p class="text-slate-400 text-sm mt-2">{element.deepDive}</p></div>))}</div></article>))}</div></div></section>

  <section class="home-section"><div class="home-shell"><CTA {...data.cta} /></div></section>
</Layout>
