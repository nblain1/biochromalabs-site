---
import Layout from '../layouts/Layout.astro';
import { siteData, departmentEmails } from '../data/siteData';
---

<Layout title={`Contact - ${siteData.name}`} description="Direct access to BioChroma Analytical Labs for project scoping, sample submission, and technical support.">
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span style="color: var(--teal); opacity: 0.8;">Contact</span>
      </nav>

      <div class="section-heading" style="text-align: left; margin-bottom: 3rem;">
        <p class="hero-eyebrow">Contact & Support</p>
        <h1>Direct access to our scientific team.</h1>
        <p class="hero-lead" style="margin-top: 1rem; max-width: 800px;">
          Whether you are initiating a new stability study or need to schedule a courier pickup, use the direct channels below to reach the appropriate department.
        </p>
      </div>

      <div class="contact-action-grid">
        <a href={`mailto:${siteData.email}`} class="action-card highlight-glow">
          <div class="action-icon"><i class="ri-flask-line"></i></div>
          <div class="action-content">
            <h3>New Project Scoping</h3>
            <p>Email our technical leads for quotes and testing plans.</p>
            <span class="action-link">{siteData.email} <i class="ri-arrow-right-line"></i></span>
          </div>
        </a>

        <a href="/documents/sample-submission-form.pdf" target="_blank" class="action-card highlight-glow">
          <div class="action-icon"><i class="ri-file-list-3-line"></i></div>
          <div class="action-content">
            <h3>Sample Submission</h3>
            <p>Download and complete the required chain-of-custody form.</p>
            <span class="action-link">Download PDF <i class="ri-download-2-line"></i></span>
          </div>
        </a>
      </div>

      <div class="contact-layout-split">
        <div class="directory-section">
          <h2><i class="ri-node-tree"></i> Department Directory</h2>
          <div class="dept-list">
            {departmentEmails.map((dept) => (
              <a href={`mailto:${dept.email}`} class="dept-row">
                <div class="dept-text">
                  <span class="dept-label">{dept.department}</span>
                  <span class="dept-addr">{dept.email}</span>
                </div>
                <div class="dept-meta">
                   <p>{dept.description}</p>
                   <i class="ri-mail-send-line"></i>
                </div>
              </a>
            ))}
          </div>
        </div>

        <aside class="facility-sidebar">
          <div class="sidebar-card">
            <h3>Lab Headquarters</h3>
            <div class="info-group">
              <i class="ri-map-pin-2-line"></i>
              <p>1309 Record Crossing Road<br/>Dallas, TX 75235</p>
            </div>
            <div class="info-group">
              <i class="ri-phone-line"></i>
              <a href={`tel:${siteData.phone}`}>{siteData.phone}</a>
            </div>
            <div class="info-group">
              <i class="ri-time-line"></i>
              <p>Mon - Fri: 8:30 AM - 5:30 PM CT</p>
            </div>
          </div>
          
          <div class="response-pledge">
             <i class="ri-flashlight-line"></i>
             <p>Technical inquiries are reviewed by staff scientists and typically receive a response within 24 business hours.</p>
          </div>
        </aside>
      </div>
    </div>
  </section>
</Layout>

<style>
  .breadcrumb { font-size: 0.875rem; margin-bottom: 2rem; display: flex; gap: 0.5rem; }
  .breadcrumb a { color: rgba(255, 255, 255, 0.6); text-decoration: none; }
  .breadcrumb a:hover { color: var(--teal); }

  /* Top Action Cards */
  .contact-action-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .action-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 12px;
    display: flex;
    gap: 1.5rem;
    text-decoration: none;
    transition: 0.3s ease;
  }

  .action-card:hover {
    border-color: rgba(0, 230, 168, 0.3);
    background: rgba(0, 230, 168, 0.02);
    transform: translateY(-3px);
  }

  .action-icon {
    width: 56px; height: 56px;
    background: rgba(0, 230, 168, 0.1);
    color: var(--teal);
    border-radius: 10px;
    display: flex; align-items: center; justify-content: center;
    font-size: 1.75rem;
    flex-shrink: 0;
  }

  .action-content h3 { color: #fff; margin-bottom: 0.5rem; font-size: 1.25rem; }
  .action-content p { color: rgba(255, 255, 255, 0.6); font-size: 0.95rem; margin-bottom: 1rem; line-height: 1.4; }
  .action-link { color: var(--teal); font-weight: 600; font-size: 0.9rem; display: flex; align-items: center; gap: 0.5rem; }

  /* Split Layout */
  .contact-layout-split {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 4rem;
    align-items: start;
  }

  /* Dept List */
  .directory-section h2 { 
    font-size: 1.5rem; color: #fff; margin-bottom: 2rem; 
    display: flex; align-items: center; gap: 0.75rem;
  }
  .directory-section h2 i { color: var(--teal); }

  .dept-list { display: flex; flex-direction: column; gap: 1rem; }
  .dept-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.05);
    border-radius: 8px;
    text-decoration: none;
    transition: 0.2s;
  }
  .dept-row:hover { border-color: rgba(0, 230, 168, 0.2); background: rgba(0, 230, 168, 0.03); }

  .dept-label { display: block; color: #fff; font-weight: 600; font-size: 1.1rem; }
  .dept-addr { color: var(--teal); font-size: 0.875rem; }
  
  .dept-meta { text-align: right; display: flex; align-items: center; gap: 1.5rem; }
  .dept-meta p { font-size: 0.875rem; color: rgba(255,255,255,0.4); margin: 0; }
  .dept-meta i { color: rgba(255,255,255,0.2); font-size: 1.25rem; }
  .dept-row:hover .dept-meta i { color: var(--teal); }

  /* Sidebar */
  .sidebar-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 12px;
  }
  .sidebar-card h3 { color: #fff; margin-bottom: 1.5rem; font-size: 1.1rem; text-transform: uppercase; letter-spacing: 0.05em; }
  
  .info-group { display: flex; gap: 1rem; margin-bottom: 1.5rem; }
  .info-group i { color: var(--teal); font-size: 1.25rem; margin-top: 0.2rem; }
  .info-group p, .info-group a { color: rgba(255,255,255,0.8); text-decoration: none; line-height: 1.5; font-size: 0.95rem; }
  .info-group a:hover { color: var(--teal); }

  .response-pledge {
    margin-top: 2rem;
    padding: 1.5rem;
    border-left: 2px solid var(--teal);
    background: rgba(0, 230, 168, 0.03);
    display: flex; gap: 1rem;
  }
  .response-pledge i { color: var(--teal); font-size: 1.25rem; }
  .response-pledge p { font-size: 0.85rem; color: rgba(255,255,255,0.6); margin: 0; line-height: 1.5; }

  @media (max-width: 992px) {
    .contact-layout-split { grid-template-columns: 1fr; }
    .contact-action-grid { grid-template-columns: 1fr; }
  }
</style>