---
import Layout from '../layouts/Layout.astro';
import { pageCopy, pageData, site } from '../data/content';

const copy = pageCopy.contact;
const data = pageData.contact;
const actionCardIcons = ['ri-flask-line', 'ri-mail-open-line'];
---

<Layout title={copy.frontmatter.layoutTitle} description={copy.frontmatter.layoutDescription}>
  <section class="home-hero"><div class="home-shell"><div class="hero-grid"><div class="hero-copy"><p class="hero-eyebrow">{copy.frontmatter.heroEyebrow}</p><h1>{copy.frontmatter.heroTitle}</h1><p class="hero-lead">{copy.frontmatter.heroLead}</p></div><aside class="hero-media-frame" aria-label="Client Support"><img src="https://images.unsplash.com/photo-1573164713988-8665fc963095?w=800&q=80" alt="BioChroma Client Consultation" loading="eager" /><div class="hero-media-caption"><p>{copy.frontmatter.heroMediaTitle}</p><span>{copy.frontmatter.heroMediaText}</span></div></aside></div></div></section>
  <section class="home-section border-t border-white/5"><div class="home-shell prose prose-invert max-w-4xl"><copy.Content /></div></section>

  <section class="home-section border-t border-white/5">
    <div class="home-shell">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
        {data.actionCards.map((card, index) => (
          <a href={`mailto:${card.email}`} class="group block bg-white/5 border border-white/10 p-8 rounded-xl transition-all duration-300 hover:-translate-y-1 hover:border-emerald-400/30 hover:bg-emerald-400/5">
            <div class="w-14 h-14 rounded-xl bg-emerald-500/10 text-emerald-400 flex items-center justify-center text-2xl mb-6"><i class={actionCardIcons[index] ?? 'ri-mail-send-line'}></i></div>
            <h2 class="text-xl font-bold text-white mb-2">{card.title}</h2>
            <p class="text-slate-300 text-sm mb-4">{card.description}</p>
            <span class="text-emerald-400 font-semibold text-sm">{card.email}</span>
          </a>
        ))}
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
        <div class="lg:col-span-2"><h2 class="text-2xl font-bold text-white mb-8">{copy.frontmatter.directoryTitle}</h2><div class="flex flex-col gap-4">{data.departmentEmails.map((dept)=>(<a href={`mailto:${dept.email}`} class="group flex flex-col md:flex-row md:items-center justify-between p-6 bg-white/5 border border-white/10 rounded-xl"><div><span class="block text-white font-semibold text-lg mb-1">{dept.department}</span><span class="text-emerald-400 text-sm">{dept.email}</span></div><p class="text-slate-400 text-sm m-0 mt-3 md:mt-0">{dept.description}</p></a>))}</div></div>
        <aside class="bg-white/5 border border-white/10 p-8 rounded-xl"><h3 class="text-white mb-6 text-lg uppercase tracking-wider font-bold">{copy.frontmatter.headquartersTitle}</h3><a href={data.headquarters.mapUrl} target="_blank" rel="noopener noreferrer" class="text-slate-300 text-sm leading-relaxed block mb-4">{data.headquarters.addressLines[0]}<br />{data.headquarters.addressLines[1]}</a><a href={`tel:${site.phone}`} class="text-slate-300 text-sm block mb-4">{site.phone}</a><p class="text-slate-300 text-sm">{data.headquarters.hours}</p><p class="text-sm text-slate-400 leading-relaxed mt-6">{data.headquarters.responseNote}</p></aside>
      </div>
    </div>
  </section>
</Layout>
