---
import Layout from '../layouts/Layout.astro';
import { siteData } from '../data/siteData';
---

<Layout title={`Contact - ${siteData.name}`} description="Contact BioChroma Analytical Labs LLC for project scoping and support.">
  <section class="home-section">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span>Contact</span>
      </nav>

      <div class="section-heading">
        <p>Contact</p>
        <h1>Tell us how we can help your team.</h1>
      </div>

      <div class="contact-layout">
        <form class="card-surface contact-form" action="#" method="post">
          <label for="name">Name</label>
          <input id="name" name="name" type="text" placeholder="Jane Doe" required />

          <label for="email">Email</label>
          <input id="email" name="email" type="email" placeholder="you@company.com" required />

          <label for="message">How can we help?</label>
          <textarea id="message" name="message" rows="6" placeholder="Share your testing scope, timeline, and key requirements." required></textarea>

          <button type="submit" class="btn-primary">Send inquiry <i class="ri-send-plane-line"></i></button>
        </form>

        <aside class="card-surface contact-aside">
          <h2>Direct contact</h2>
          <ul>
            <li>
              <span>Email</span>
              <a href={`mailto:${siteData.email}`}>{siteData.email}</a>
            </li>
            <li>
              <span>Phone</span>
              <a href={`tel:${siteData.phone}`}>{siteData.phone}</a>
            </li>
            <li>
              <span>Office hours</span>
              <p>Monday-Friday, 8:30 AM-5:30 PM CT</p>
            </li>
          </ul>
          <p class="response-note"><i class="ri-time-line"></i> We typically respond within 24 hours.</p>
        </aside>
      </div>
    </div>
  </section>
</Layout>
