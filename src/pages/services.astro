---
import Layout from '../layouts/Layout.astro';
import SectionIntro from '../components/SectionIntro.astro';
import IconCard from '../components/IconCard.astro';
import ProcessStep from '../components/ProcessStep.astro';
import CTA from '../components/CTA.astro';
import FaqList from '../components/FaqList.astro';
import {
  siteData,
  serviceLines,
  serviceAssurance,
  processSteps,
  faqs,
} from '../data/siteData';
---

<Layout
  title={`Capabilities - ${siteData.name}`}
  description="Analytical chemistry, microbiology, stability, and method development delivered with regulatory-ready documentation."
>
  <section class="section-spacing pt-28">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-10 lg:grid-cols-[1.2fr_0.8fr]">
        <div>
          <p class="text-xs uppercase tracking-[0.3em] text-emerald-300">Capabilities</p>
          <h1 class="mt-4 text-4xl font-semibold text-white sm:text-5xl">
            Defensible lab services for regulated teams.
          </h1>
          <p class="mt-4 text-base text-slate-300 sm:text-lg">
            BioChroma delivers integrated chemistry, microbiology, stability, and method development support with a single
            quality system, documented workflows, and consistent reporting.
          </p>
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <a class="btn-primary" href="/contact">
              Start scoping
              <i class="ri-arrow-right-up-line"></i>
            </a>
            <a class="btn-secondary" href="#service-lines">
              Explore service lines
            </a>
          </div>
        </div>
        <div class="card-surface space-y-4">
          <p class="text-sm font-semibold text-white">What you can expect</p>
          <ul class="space-y-3 text-sm text-slate-300">
            <li class="flex items-start gap-3">
              <i class="ri-checkbox-circle-line text-emerald-300 mt-0.5"></i>
              Scope-defined deliverables and documented chain of custody.
            </li>
            <li class="flex items-start gap-3">
              <i class="ri-checkbox-circle-line text-emerald-300 mt-0.5"></i>
              Independent data review checkpoints to maintain quality.
            </li>
            <li class="flex items-start gap-3">
              <i class="ri-checkbox-circle-line text-emerald-300 mt-0.5"></i>
              Reports structured for audits, submissions, and internal review.
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section id="service-lines" class="section-spacing bg-slate-950">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Service lines"
        title="Capabilities that scale from single projects to ongoing programs"
        description="Choose a focused engagement or bundle services under a single quality umbrella."
      />
      <div class="mt-10 grid gap-6 lg:grid-cols-2">
        {serviceLines.map((line) => (
          <div class="card-surface flex flex-col gap-5">
            <div>
              <h3 class="text-xl font-semibold text-white">{line.title}</h3>
              <p class="text-sm text-slate-300 mt-2">{line.description}</p>
            </div>
            <ul class="grid gap-2 text-sm text-slate-200 sm:grid-cols-2">
              {line.services.map((service) => (
                <li class="flex items-start gap-2">
                  <i class="ri-arrow-right-s-line text-emerald-300 mt-0.5"></i>
                  <span>{service}</span>
                </li>
              ))}
            </ul>
            <a class="text-sm font-semibold text-emerald-200" href="/contact">
              Discuss {line.title}
              <i class="ri-arrow-right-up-line"></i>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Assurance"
        title="Quality assurances built into every engagement"
        description="Operational guardrails keep timelines clear and data defensible."
      />
      <div class="mt-10 grid gap-6 md:grid-cols-3">
        {serviceAssurance.map((item) => (
          <IconCard icon={item.icon} title={item.title} description={item.description} />
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slate-950">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="Engagement"
        title="A streamlined path from scope to reporting"
        description="Clear handoffs and documented controls keep your stakeholders aligned."
      />
      <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        {processSteps.map((step, index) => (
          <ProcessStep index={index + 1} title={step.title} description={step.description} />
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <SectionIntro
        eyebrow="FAQ"
        title="Answers for faster scoping"
        description="Everything you need to align on scope, timelines, and documentation."
      />
      <div class="mt-8">
        <FaqList items={faqs} />
      </div>
    </div>
  </section>

  <section class="section-spacing">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <CTA
        title="Need a program roadmap?"
        description="Share your sample matrix, regulatory context, and desired timelines. We'll align on a scoped plan."
        primaryLabel="Request intake"
        primaryHref="/contact"
        secondaryLabel="View quality story"
        secondaryHref="/about"
      />
    </div>
  </section>
</Layout>
