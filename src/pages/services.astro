---
import Layout from '../layouts/Layout.astro';
import { siteData } from '../data/siteData';

const serviceCategories = [
  {
    title: 'Analytical chemistry',
    summary: 'Quantitative and qualitative analysis for regulated products and research programs.',
    covers: ['Assays and identity testing', 'Impurities and degradation profiling', 'Raw material characterization'],
    deliverables: ['Documented methods', 'Reviewed data tables', 'Clear conclusions and observations'],
  },
  {
    title: 'Microbiology testing',
    summary: 'Microbial quality and environmental support for manufacturing and development teams.',
    covers: ['Bioburden and microbial limits', 'Environmental monitoring support', 'Microbial identification'],
    deliverables: ['Sample handling records', 'Results summary with interpretations', 'QA-reviewed reports'],
  },
  {
    title: 'Contaminant screening',
    summary: 'Targeted screening for contaminants and residuals aligned to risk profiles.',
    covers: ['Residual solvents and extractables', 'Metals and elemental impurities', 'Cross-contamination checks'],
    deliverables: ['Scope-defined test plan', 'Traceable results tables', 'Deviation documentation when needed'],
  },
  {
    title: 'Method development',
    summary: 'Fit-for-purpose methods built for transfer, validation, or routine testing.',
    covers: ['Method feasibility and optimization', 'Transfer package preparation', 'Validation planning support'],
    deliverables: ['Method summaries and parameters', 'Development rationale', 'Data review notes'],
  },
  {
    title: 'Stability programs',
    summary: 'Program design, storage, and reporting to support product lifecycle decisions.',
    covers: ['Protocol and pull schedule planning', 'Storage and tracking', 'Trend analysis support'],
    deliverables: ['Stability reports', 'Change tracking logs', 'Program status updates'],
  },
];

const deliveryHighlights = [
  {
    title: 'Chain-of-custody handling',
    description: 'Samples are logged, tracked, and stored with documented custody controls.',
    icon: 'ri-shield-check-line',
  },
  {
    title: 'Documented methods',
    description: 'Every test follows approved methods with clear version control.',
    icon: 'ri-file-list-3-line',
  },
  {
    title: 'Clear reporting',
    description: 'Results are summarized with interpretations and reviewer sign-off.',
    icon: 'ri-file-check-line',
  },
  {
    title: 'Secure delivery',
    description: 'Reports are shared through secure channels with controlled access.',
    icon: 'ri-lock-line',
  },
];

const scopingNeeds = [
  {
    title: 'Sample matrix',
    description: 'What the material is and how it was produced or stored.',
  },
  {
    title: 'Targets and priorities',
    description: 'Analytes, contaminants, or microbial targets to include or exclude.',
  },
  {
    title: 'Sample quantity',
    description: 'Number of samples, replicates, and any retention needs.',
  },
  {
    title: 'Timeline expectations',
    description: 'Preferred delivery windows and any milestone dependencies.',
  },
  {
    title: 'Reporting needs',
    description: 'Format preferences, data tables, and audit-readiness requirements.',
  },
];

const faqs = [
  {
    question: 'How do we start a new testing project?',
    answer: 'Share your sample information and testing goals. We confirm scope, methods, and reporting requirements before intake.',
  },
  {
    question: 'Do you provide chain-of-custody documentation?',
    answer: 'Yes. Sample receipt, tracking, and storage are documented and included with project records.',
  },
  {
    question: 'Can you support method transfer from another lab?',
    answer: 'We can evaluate transfer packages and align on acceptance criteria before execution.',
  },
  {
    question: 'What reporting formats are available?',
    answer: 'Reports are delivered electronically with clear data tables, observations, and reviewer sign-off. Custom formats are available upon request.',
  },
  {
    question: 'Do you handle stability program management?',
    answer: 'We support protocol design, sample storage, testing pulls, and trend reporting based on your program needs.',
  },
  {
    question: 'How do you handle out-of-spec or atypical results?',
    answer: 'We document deviations, notify stakeholders, and include clear context in the final report.',
  },
  {
    question: 'Can we request a project-specific quality agreement?',
    answer: 'Yes. Quality agreements and documentation packages are available upon request during scoping.',
  },
];
---

<Layout title={`Services - ${siteData.name}`} description="Analytical chemistry, microbiology testing, and stability support for regulated products.">
  <section class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <p class="text-sm uppercase tracking-[0.3em] text-[#4db848] mb-4">Lab Services</p>
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          Defensible lab testing for regulated products and high-stakes decisions.
        </h1>
        <p class="text-xl text-gray-300 mb-10">
          BioChroma Analytical Labs partners with founders, QA managers, and regulatory teams to deliver clear data, documented methods, and reliable reporting.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/contact"
            class="bg-[#4db848] hover:bg-[#3ea942] text-white px-8 py-4 rounded-lg font-bold text-lg transition-all inline-flex items-center justify-center gap-3"
          >
            Request a Quote
            <i class="ri-arrow-right-line"></i>
          </a>
          <a
            href="#service-categories"
            class="border border-white/40 hover:border-white text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all inline-flex items-center justify-center gap-3"
          >
            Explore services
            <i class="ri-arrow-down-line"></i>
          </a>
        </div>
        <ul class="mt-10 space-y-3 text-gray-300">
          <li class="flex items-start gap-3">
            <i class="ri-check-line text-[#4db848] mt-1"></i>
            Scoped testing plans aligned to your regulatory context.
          </li>
          <li class="flex items-start gap-3">
            <i class="ri-check-line text-[#4db848] mt-1"></i>
            Documentation-ready workflows and traceable sample handling.
          </li>
          <li class="flex items-start gap-3">
            <i class="ri-check-line text-[#4db848] mt-1"></i>
            Clear reporting designed for internal reviews and submissions.
          </li>
        </ul>
      </div>
    </div>
  </section>

  <section id="service-categories" class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Service categories</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Scalable capabilities built for regulated programs, from early development through commercial production.
        </p>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {serviceCategories.map((service) => (
          <div class="bg-slate-800 border border-slate-700 rounded-2xl p-8 flex flex-col gap-6">
            <div>
              <h3 class="text-2xl font-bold text-white mb-3">{service.title}</h3>
              <p class="text-gray-300">{service.summary}</p>
            </div>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <h4 class="text-sm uppercase tracking-[0.2em] text-gray-400 mb-3">What it covers</h4>
                <ul class="space-y-2 text-gray-300">
                  {service.covers.map((item) => (
                    <li class="flex items-start gap-2">
                      <i class="ri-arrow-right-s-line text-[#4db848] mt-1"></i>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
              <div>
                <h4 class="text-sm uppercase tracking-[0.2em] text-gray-400 mb-3">Typical deliverables</h4>
                <ul class="space-y-2 text-gray-300">
                  {service.deliverables.map((item) => (
                    <li class="flex items-start gap-2">
                      <i class="ri-checkbox-circle-line text-[#4db848] mt-1"></i>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
            <a
              href={`/contact?service=${encodeURIComponent(service.title)}`}
              class="text-[#4db848] hover:text-[#74d06f] font-semibold inline-flex items-center gap-2"
            >
              Discuss {service.title}
              <i class="ri-arrow-right-line"></i>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">What we deliver</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Consistent data quality and documentation that stands up to audits and internal review.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {deliveryHighlights.map((item) => (
          <div class="bg-slate-900 border border-slate-700 rounded-xl p-6">
            <div class="w-12 h-12 bg-[#4db848]/10 rounded-lg flex items-center justify-center mb-4">
              <i class={`${item.icon} text-2xl text-[#4db848]`}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{item.title}</h3>
            <p class="text-gray-400 leading-relaxed">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">What we need to scope your project</h2>
          <p class="text-xl text-gray-300 mb-8">
            Share the essentials and we will align on scope, method fit, and reporting expectations.
          </p>
          <a
            href="/contact"
            class="bg-[#4db848] hover:bg-[#3ea942] text-white px-6 py-3 rounded-lg font-semibold inline-flex items-center gap-2"
          >
            Send project details
            <i class="ri-arrow-right-line"></i>
          </a>
        </div>
        <div class="space-y-4">
          {scopingNeeds.map((item) => (
            <div class="bg-slate-800 border border-slate-700 rounded-xl p-5">
              <h3 class="text-lg font-semibold text-white mb-2">{item.title}</h3>
              <p class="text-gray-400">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">FAQ</h2>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          Quick answers to keep scoping decisions moving.
        </p>
      </div>
      <div class="max-w-4xl mx-auto space-y-6">
        {faqs.map((faq) => (
          <div class="bg-slate-900 rounded-xl border border-slate-700 p-6">
            <h3 class="text-xl font-bold text-white mb-3">{faq.question}</h3>
            <p class="text-gray-400 leading-relaxed">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-linear-to-r from-[#4db848] to-[#264177]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Ready to request a quote?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Tell us about your samples, timelines, and reporting needs. We will follow up with a clear scope and next steps.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-3 bg-white text-[#4db848] hover:bg-slate-100 px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105 shadow-lg"
      >
        Request a Quote
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </section>
</Layout>
