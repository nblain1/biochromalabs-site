---
import Layout from '../layouts/Layout.astro';
import { siteData } from '../data/siteData';

const capabilityLayers = [
  {
    id: 'analytical-chemistry',
    title: 'Analytical Chemistry',
    summary: 'Verification of product specifications, identity, and purity for raw materials and finished goods.',
    icon: 'ri-test-tube-line',
    highlights: ['Label Claim Verification', 'Purity & Impurities', 'Nutritional Analysis'],
    chapterTitle: 'Testing Applications',
    details: [
      'Label Claims & Potency: Quantitative analysis of active ingredients, vitamins, and minerals to ensure label accuracy and consumer safety.',
      'Purity & Impurities: Screening for residual solvents, degradation products, and low-level contaminants to meet regulatory standards.',
      'Raw Material Identity: Confirming the authenticity and specification conformance of incoming ingredients before they enter production.',
      'Compositional Profiling: Detailed analysis of proteins, fats, and moisture levels for nutritional labeling and formulation consistency.'
    ],
  },
  {
    id: 'microbiology-programs',
    title: 'Microbiology Programs',
    summary: 'Testing protocols designed to ensure product safety, microbiological stability, and facility hygiene.',
    icon: 'ri-bug-line',
    highlights: ['Safety Screening (Pathogens)', 'Preservative Efficacy', 'Water Quality'],
    chapterTitle: 'Operational Safety',
    details: [
      'Pathogen Detection: Rigorous screening for S. aureus, Salmonella, E. coli, and P. aeruginosa to prevent consumer health risks.',
      'Shelf Life Stability: Monitoring microbial growth over time to determine safe expiration dates and storage requirements.',
      'Antimicrobial Efficacy: Challenge testing (AET) to verify that your preservative system protects the product throughout its use-life.',
      'Facility & Water Control: Monitoring of production water and environmental surfaces to maintain a controlled manufacturing environment.'
    ],
  },
  {
    id: 'stability-testing',
    title: 'Stability Testing',
    summary: 'Data-driven shelf life studies to ensure product integrity remains intact from warehouse to consumer.',
    icon: 'ri-timer-line',
    highlights: ['Shelf Life Projection', 'Accelerated Aging', 'Stress Testing'],
    chapterTitle: 'Compliance Milestones',
    details: [
      'Shelf Life Verification: Real-time and accelerated studies to support expiry dating for global regulatory submissions.',
      'Packaging Compatibility: Assessing potential interactions between the product and its primary container over time.',
      'Environmental Stress: Testing product resilience against temperature fluctuations, humidity, and light exposure (Photostability).',
      'Forced Degradation: Stressing the formula to identify potential breakdown pathways and ensure long-term stability.'
    ],
  },
  {
    id: 'method-development',
    title: 'Method Development',
    summary: 'Custom analytical protocols built for your specific matrix and regulatory pathway.',
    icon: 'ri-flask-line',
    highlights: ['Custom Protocol Design', 'Technology Transfer', 'Validation Packages'],
    chapterTitle: 'Research & Strategy',
    details: [
      'Method Optimization: Designing testing pathways specifically for complex or novel matrices where standard methods may fail.',
      'Regulatory Validation: Providing formal documentation (USP <1225>) required for FDA or international health authority filings.',
      'Technology Transfer: Ensuring your internal lab or manufacturing site can successfully execute the methods we develop.',
      'Troubleshooting: Analytical support to identify the root cause of production deviations or unexpected results.'
    ],
  }
];

// We keep the instruments here as a "Technical Appendix" for the chemists
const instrumentRegistry = [
  { category: "Chromatography", tools: ["UPLC / HPLC (PDA, RI, ELSD)", "Ion Chromatography (IC)", "Gas Chromatography (GC)"] },
  { category: "Mass Spectrometry", tools: ["LCMS (Liquid / Mass Spec)", "GCMS (Gas / Mass Spec)"] },
  { category: "Spectroscopy", tools: ["FTIR Spectroscopy", "UV-Vis Spectrophotometry"] },
  { category: "Specialized Analysis", tools: ["Protein Analyzer (Total Nitrogen)", "Validated Stability Chambers", "Class II BSCs"] }
];
---

<Layout
  title={`Capabilities - ${siteData.name}`}
  description="Analytical testing outcomes for regulated product development, from purity to label claim verification."
>
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span style="color: var(--teal); opacity: 0.8;">Capabilities</span>
      </nav>

      <div class="section-heading" style="text-align: left; margin-bottom: 2rem;">
        <p class="hero-eyebrow">Service Capabilities</p>
        <h1 style="max-width: 900px;">Outcome-driven testing for regulated programs.</h1>
      </div>

      <div class="layer-grid hero-row-fix">
        {capabilityLayers.map((capability) => (
          <a href={`#${capability.id}`} class="layer-card">
            <div class="layer-head">
              <span class="layer-icon"><i class={capability.icon}></i></span>
              <h2>{capability.title}</h2>
            </div>
            <p class="layer-summary">{capability.summary}</p>
            <ul class="capability-pills">
              {capability.highlights.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section chapter-section">
    <div class="home-shell">
      <div class="section-heading">
        <p>Technical Deep Dive</p>
        <h2>Analytical Applications & Methods</h2>
      </div>

      <div class="chapter-stack">
        {capabilityLayers.map((capability) => (
          <details id={capability.id} class="chapter-item">
            <summary>
              <div class="summary-content">
                <strong>{capability.title}</strong>
                <span class="chapter-subtitle">{capability.chapterTitle}</span>
              </div>
              <i class="ri-add-line toggle-icon"></i>
            </summary>
            <div class="details-content">
              <ul class="technical-list">
                {capability.details.map((detail) => {
                  const [label, ...textParts] = detail.split(': ');
                  return (
                    <li class="aligned-list-item">
                      <span class="list-label">{label}:</span>
                      <span class="list-value">{textParts.join(': ')}</span>
                    </li>
                  );
                })}
              </ul>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section instrument-registry-section" style="background: rgba(255,255,255,0.01);">
    <div class="home-shell">
      <div class="section-heading">
        <p>Infrastructure</p>
        <h2>Qualified Instrumentation Registry</h2>
      </div>

      <div class="registry-grid">
        {instrumentRegistry.map(item => (
          <div class="registry-category">
            <h4>{item.category}</h4>
            <ul>
              {item.tools.map(tool => <li>{tool}</li>)}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Global and Reset styles */
  .breadcrumb { font-size: 0.875rem; margin-bottom: 2rem; display: flex; gap: 0.5rem; }
  .breadcrumb a { color: rgba(255, 255, 255, 0.6); text-decoration: none; }
  .breadcrumb a:hover { color: var(--teal); }

  /* 4-Column Grid */
  .layer-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; margin-top: 3rem; }
  @media (min-width: 1024px) {
    .hero-row-fix { grid-template-columns: repeat(4, 1fr) !important; }
  }

  .layer-card { background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.05); padding: 2rem; border-radius: 12px; display: flex; flex-direction: column; transition: 0.2s ease; text-decoration: none; color: inherit; }
  .layer-card:hover { transform: translateY(-4px); border-color: rgba(0, 230, 168, 0.3); background: rgba(0, 230, 168, 0.02); }

  .layer-head { display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; }
  .layer-icon { background: rgba(0, 230, 168, 0.1); color: var(--teal); width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 1.25rem; }
  .layer-head h2 { font-size: 1.15rem; color: #fff; margin: 0; }
  .layer-summary { font-size: 0.9rem; color: rgba(255, 255, 255, 0.7); line-height: 1.5; margin-bottom: 1.5rem; }

  /* Teal Pills */
  .capability-pills { list-style: none; padding: 0; margin-top: auto; display: flex; flex-wrap: wrap; gap: 0.5rem; }
  .capability-pills li { font-size: 0.75rem; background: rgba(0, 230, 168, 0.05); color: var(--teal); border: 1px solid rgba(0, 230, 168, 0.1); padding: 0.35rem 0.75rem; border-radius: 999px; display: flex; align-items: center; line-height: 1; }

  /* Accordion Styling */
  .chapter-stack { display: flex; flex-direction: column; gap: 1rem; max-width: 1000px; margin-top: 2rem; }
  .chapter-item { background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.05); border-radius: 8px; }
  .chapter-item summary { padding: 1.5rem 2rem; cursor: pointer; display: flex; justify-content: space-between; align-items: center; list-style: none; }
  .chapter-item summary::-webkit-details-marker { display: none; }
  .chapter-subtitle { font-size: 0.8rem; color: var(--teal); text-transform: uppercase; letter-spacing: 0.05em; margin-top: 0.25rem; display: block; }
  .toggle-icon { font-size: 1.5rem; color: rgba(255, 255, 255, 0.3); transition: 0.3s; }
  .chapter-item[open] .toggle-icon { transform: rotate(45deg); color: var(--teal); }
  
  /* FIXED ALIGNMENT LIST */
  .details-content { padding: 1.5rem 2rem 2rem 2rem; border-top: 1px solid rgba(255, 255, 255, 0.05); }
  .technical-list { list-style: none; padding: 0; display: flex; flex-direction: column; gap: 1.25rem; }
  
  .aligned-list-item {
    display: grid;
    grid-template-columns: 240px 1fr; /* Fixed width for labels to align text */
    gap: 1.5rem;
    align-items: start;
  }

  .list-label { color: #fff; font-weight: 700; font-size: 1rem; }
  .list-value { color: rgba(255, 255, 255, 0.7); line-height: 1.6; font-size: 1rem; }

  @media (max-width: 768px) {
    .aligned-list-item { grid-template-columns: 1fr; gap: 0.25rem; }
  }

  /* Registry Grid */
  .registry-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 3rem; margin-top: 3rem; padding: 3rem; background: rgba(255, 255, 255, 0.02); border-radius: 12px; }
  .registry-category h4 { color: var(--teal); margin-bottom: 1.25rem; border-bottom: 1px solid rgba(0, 230, 168, 0.2); padding-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.05em; font-size: 0.9rem; }
  .registry-category li { font-size: 0.875rem; color: rgba(255, 255, 255, 0.7); margin-bottom: 0.75rem; list-style: none; }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const details = document.querySelectorAll('.chapter-item');
    details.forEach((targetDetail) => {
      targetDetail.addEventListener('click', () => {
        details.forEach((detail) => {
          if (detail !== targetDetail) { detail.removeAttribute('open'); }
        });
      });
    });
  });
</script>