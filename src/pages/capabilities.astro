---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import { pageCopy, pageData } from '../data/content';
import capabilitiesHero from '../assets/capabilities-hero.jpg';

const copy = pageCopy.capabilities;
const data = pageData.capabilities;
---

<Layout title={copy.frontmatter.layoutTitle} description={copy.frontmatter.layoutDescription}>
  <section class="home-hero"><div class="home-shell"><div class="hero-grid"><div class="hero-copy"><p class="hero-eyebrow">{copy.frontmatter.heroEyebrow}</p><h1>{copy.frontmatter.heroTitle}</h1><p class="hero-lead">{copy.frontmatter.heroLead}</p></div><aside class="hero-media-frame" aria-label="Capabilities"><Image src={capabilitiesHero} alt="BioChroma capabilities" loading="eager" class="w-full h-full object-cover rounded-2xl" /></aside></div></div></section>
  <section class="home-section border-t border-white/5"><div class="home-shell prose prose-invert max-w-4xl"><copy.Content /></div></section>

  <section class="home-section border-t border-white/5"><div class="home-shell"><div class="section-heading"><p>{copy.frontmatter.overviewEyebrow}</p><h2>{copy.frontmatter.overviewTitle}</h2></div><div class="space-y-8 mt-10">{data.technicalSpecs.map((spec)=>(<article id={spec.id} class="bg-white/5 border border-white/10 rounded-xl p-6"><h3 class="text-white text-2xl">{spec.title}</h3><p class="text-emerald-400 text-sm">{spec.subtitle}</p><p class="text-slate-300 mt-3">{spec.description}</p><div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">{spec.tests.map((test)=>(<div class="bg-slate-900/70 border border-white/5 rounded-lg p-4"><h4 class="text-white">{test.name}</h4><p class="text-emerald-400 text-xs">{test.method}</p><p class="text-slate-300 text-sm mt-2">{test.application}</p><p class="text-slate-400 text-sm mt-3">{test.deepDive}</p></div>))}</div></article>))}</div></div></section>

  <section class="home-section border-t border-white/5"><div class="home-shell"><div class="section-heading"><p>{copy.frontmatter.registryEyebrow}</p><h2>{copy.frontmatter.registryTitle}</h2></div><div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-10">{data.instrumentRegistry.map((group)=>(<article class="bg-white/5 border border-white/10 rounded-xl p-6"><h3 class="text-white text-xl mb-3">{group.category}</h3><ul class="space-y-2">{group.tools.map((tool)=><li class="text-slate-300 text-sm">{tool}</li>)}</ul></article>))}</div></div></section>

  <section class="home-section"><div class="home-shell"><CTA {...data.cta} /></div></section>
</Layout>
