---
import Layout from '../layouts/Layout.astro';
import { siteData } from '../data/siteData';

const capabilityLayers = [
  {
    title: 'Stability Testing',
    summary: 'Real-time, accelerated, and stress protocols that map product performance over shelf life.',
    icon: 'ri-timer-line',
    highlights: ['ICH-aligned protocols', 'Storage condition controls', 'Trend analysis and shelf-life recommendations'],
    chapterTitle: 'Technical specifications',
    details: [
      'Study design: Real-time, accelerated, and forced degradation workflows based on matrix risk.',
      'Testing windows: Pull points at protocol-defined intervals with trending dashboards and variance flagging.',
      'Deliverables: Stability summaries, specification conformance, and recommended retest or expiry periods.',
    ],
  },
  {
    title: 'Method Development',
    summary: 'Transfer-ready analytical methods optimized for robustness and routine QC execution.',
    icon: 'ri-flask-line',
    highlights: ['Fit-for-purpose method design', 'System suitability framework', 'Validation-ready documentation'],
    chapterTitle: 'Development chapters',
    details: [
      'Screening: Detection mode, mobile phase, and extraction conditions selected for matrix complexity.',
      'Optimization: Precision, linearity, and specificity refined through DOE-informed experiments.',
      'Transfer package: Method SOPs, validation plans, and acceptance criteria bundled for client laboratories.',
    ],
  },
  {
    title: 'Microbiology Programs',
    summary: 'Compendial microbiological testing that supports product safety, release, and monitoring.',
    icon: 'ri-bug-line',
    highlights: ['USP and FDA BAM coverage', 'Environmental monitoring support', 'Rapid deviation communication'],
    chapterTitle: 'Program chapters',
    details: [
      'Core tests: Bioburden, pathogen screening, preservative efficacy, and environmental monitoring.',
      'Controls: Media qualification, growth promotion, and positive/negative control governance.',
      'Reporting: Organism-level findings with action thresholds and remediation recommendations.',
    ],
  },
  {
    title: 'Analytical Chemistry',
    summary: 'Chemistry workflows for identity, assay, impurities, and compositional profiling.',
    icon: 'ri-test-tube-line',
    highlights: ['Compendial and custom methods', 'Raw material through finished product', 'Audit-ready report packages'],
    chapterTitle: 'Testing chapters',
    details: [
      'Techniques: HPLC/UPLC, spectrophotometry, titration, and targeted wet chemistry workflows.',
      'Data controls: Instrument qualification checks and independent analyst review checkpoints.',
      'Outputs: Certificates of analysis and technical interpretation for quality and regulatory teams.',
    ],
  },
];
---

<Layout
  title={`Capabilities - ${siteData.name}`}
  description="Layered analytical capabilities with concise service overviews and expandable technical detail."
>
  <section class="home-hero">
    <div class="home-shell">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">Home</a>
        <span aria-hidden="true">&gt;</span>
        <span style="color: var(--teal); opacity: 0.8;">Capabilities</span>
      </nav>

      <div class="section-heading" style="text-align: left; margin-bottom: 2rem;">
        <p class="hero-eyebrow">Capabilities</p>
        <h1 style="max-width: 800px;">Layered support for regulated programs from feasibility through release.</h1>
        <p class="hero-lead" style="max-width: 800px; margin-top: 1rem;">
          Start with a fast scan of core services, then expand each chapter for deeper technical specifications and delivery details.
        </p>
      </div>

      <div class="layer-grid">
        {capabilityLayers.map((capability) => (
          <article class="layer-card">
            <div class="layer-head">
              <span class="layer-icon"><i class={capability.icon}></i></span>
              <h2>{capability.title}</h2>
            </div>
            <p class="layer-summary">{capability.summary}</p>
            <ul class="highlight-list">
              {capability.highlights.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="home-section chapter-section" style="margin-bottom: 4rem;">
    <div class="home-shell">
      <div class="section-heading">
        <p>Deep Dive</p>
        <h2>Technical chapters by service line.</h2>
      </div>

      <div class="chapter-stack">
        {capabilityLayers.map((capability) => (
          <details class="chapter-item">
            <summary>
              <div class="summary-content">
                <strong>{capability.title}</strong>
                <span class="chapter-subtitle">{capability.chapterTitle}</span>
              </div>
              <i class="ri-add-line toggle-icon"></i>
            </summary>
            <div class="details-content">
              <ol class="technical-list">
                {capability.details.map((detail) => {
                  const [boldPart, ...rest] = detail.split(': ');
                  return (
                    <li>
                      <strong style="color: #fff;">{boldPart}:</strong> {rest.join(': ')}
                    </li>
                  );
                })}
              </ol>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Breadcrumb Styling */
  .breadcrumb {
    font-size: 0.875rem;
    margin-bottom: 2rem;
    display: flex;
    gap: 0.5rem;
  }
  
  .breadcrumb a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .breadcrumb a:hover {
    color: #00e6a8;
  }

  /* Grid Layout for Top Cards */
  .layer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .layer-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .layer-card:hover {
    transform: translateY(-4px);
    border-color: rgba(0, 230, 168, 0.3);
  }

  .layer-head {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .layer-icon {
    background: rgba(0, 230, 168, 0.1);
    color: #00e6a8;
    width: 48px;
    height: 48px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }

  .layer-head h2 {
    font-size: 1.25rem;
    color: #fff;
    margin: 0;
  }

  .layer-summary {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .highlight-list {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-top: auto;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .highlight-list li {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    position: relative;
    padding-left: 1.25rem;
  }

  .highlight-list li::before {
    content: 'â†’';
    color: #00e6a8;
    position: absolute;
    left: 0;
  }

  /* Accordion Styling */
  .chapter-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 900px;
  }

  .chapter-item {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    overflow: hidden;
  }

  .chapter-item summary {
    padding: 1.5rem 2rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none; /* Removes default arrow */
    user-select: none;
  }

  .chapter-item summary::-webkit-details-marker {
    display: none;
  }

  .summary-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .summary-content strong {
    font-size: 1.25rem;
    color: #fff;
  }

  .chapter-subtitle {
    font-size: 0.875rem;
    color: #00e6a8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toggle-icon {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.5);
    transition: transform 0.3s ease, color 0.3s ease;
  }

  /* When accordion is open */
  .chapter-item[open] {
    border-color: rgba(0, 230, 168, 0.3);
  }

  .chapter-item[open] .toggle-icon {
    transform: rotate(45deg);
    color: #00e6a8;
  }

  .details-content {
    padding: 0 2rem 2rem 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    margin-top: 1rem;
    padding-top: 1.5rem;
  }

  .technical-list {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.7;
    padding-left: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>

<script>
  // Accordion Logic: Ensures only one opens at a time
  document.addEventListener('DOMContentLoaded', () => {
    const detailsElements = document.querySelectorAll('.chapter-item');
    
    detailsElements.forEach((targetDetail) => {
      targetDetail.addEventListener('click', () => {
        detailsElements.forEach((detail) => {
          if (detail !== targetDetail) {
            detail.removeAttribute('open');
          }
        });
      });
    });
  });
</script>